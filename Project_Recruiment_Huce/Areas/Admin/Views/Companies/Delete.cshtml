@model Project_Recruiment_Huce.Areas.Admin.Models.CompanyListVm
@{
    ViewBag.Title = "Xóa công ty";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

<div class="card">
  <div class="card-header bg-danger text-white">
    <h5 class="card-title mb-0"><i class="bi bi-exclamation-triangle"></i> Xác nhận xóa công ty</h5>
  </div>
  <div class="card-body">
    <div class="alert alert-warning">
      <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa công ty này? Hành động này không thể hoàn tác.
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <h6>Thông tin công ty sẽ bị xóa:</h6>
        <table class="table table-sm">
          <tr><td><strong>ID:</strong></td><td>@Model.CompanyId</td></tr>
          <tr><td><strong>Tên công ty:</strong></td><td>@Model.CompanyName</td></tr>
          <tr><td><strong>Mã số thuế:</strong></td><td>@(Model.TaxCode ?? "-")</td></tr>
          <tr><td><strong>Website:</strong></td><td>@(Model.Website ?? "-")</td></tr>
        </table>
      </div>
    </div>

    @using (Html.BeginForm("Delete", "Companies", FormMethod.Post))
    {
      @Html.AntiForgeryToken()
      @Html.HiddenFor(m => m.CompanyId)

      <div class="d-flex justify-content-end gap-2">
        <a href="@Url.Action("Index")" class="btn btn-secondary">
          <i class="bi bi-x-circle"></i> Hủy
        </a>
        <button type="submit" class="btn btn-danger">
          <i class="bi bi-trash"></i> Xác nhận xóa
        </button>
      </div>
    }
  </div>
</div>

