@model Project_Recruiment_Huce.Areas.Admin.Models.EditCompanyVm
@{
    ViewBag.Title = "Sửa công ty";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0"><i class="bi bi-pencil-square"></i> Chỉnh sửa công ty</h5>
    </div>
    <div class="card-body">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        @using (Html.BeginForm("Edit", "Companies", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data", id = "editCompanyForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.CompanyId)
            @Html.HiddenFor(m => m.CurrentPhotoId)
            @Html.HiddenFor(m => m.CurrentPhotoUrl)

            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        @Html.LabelFor(m => m.CompanyName, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", placeholder = "Nhập tên công ty" })
                        @Html.ValidationMessageFor(m => m.CompanyName, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.TaxCode, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.TaxCode, new { @class = "form-control", placeholder = "Nhập mã số thuế" })
                        @Html.ValidationMessageFor(m => m.TaxCode, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Industry, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Industry, new { @class = "form-control", placeholder = "Nhập lĩnh vực" })
                        @Html.ValidationMessageFor(m => m.Industry, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Address, new { @class = "form-label" })
                        @Html.TextAreaFor(m => m.Address, new { @class = "form-control", rows = 3, placeholder = "Nhập địa chỉ" })
                        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Phone, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Nhập số điện thoại" })
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Fax, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Fax, new { @class = "form-control", placeholder = "Nhập số Fax" })
                        @Html.ValidationMessageFor(m => m.Fax, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.CompanyEmail, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.CompanyEmail, new { @class = "form-control", type = "email", placeholder = "Nhập email" })
                        @Html.ValidationMessageFor(m => m.CompanyEmail, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Website, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Website, new { @class = "form-control", type = "url", placeholder = "https://example.com" })
                        @Html.ValidationMessageFor(m => m.Website, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Description, new { @class = "form-label" })
                        @Html.HiddenFor(m => m.Description, new { id = "hiddenDescription" })
                        <div id="editor-container" style="height: 300px; background-color: white;"></div>
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.Active, new { @class = "form-check-input" })
                            @Html.LabelFor(m => m.Active, new { @class = "form-check-label" })
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">Logo</h6>
                        </div>
                        <div class="card-body text-center">
                            <div id="photoPreview" class="mb-3">
                                @if (!string.IsNullOrEmpty(Model.CurrentPhotoUrl))
                                {
                                    <img src="@Url.Content(Model.CurrentPhotoUrl)" alt="Current Logo" class="rounded-circle mx-auto d-block" style="width: 200px; height: 200px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white mx-auto" style="width: 200px; height: 200px;">
                                        <i class="bi bi-camera" style="font-size: 60px;"></i>
                                    </div>
                                }
                            </div>
                            <div class="mb-3">
                                @Html.LabelFor(m => m.PhotoFile, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.PhotoFile, new { @class = "form-control", type = "file", accept = "image/*" })
                            </div>
                            <small class="text-muted">Để trống nếu không muốn thay đổi logo</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-3">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Hủy
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Cập nhật
                </button>
            </div>
        }
    </div>
</div>

<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
@section Scripts {    
    <script>
        document.addEventListener("DOMContentLoaded", function() {

            var photoInput = document.getElementById('PhotoFile');
            if (photoInput) {
                photoInput.addEventListener('change', function (e) {
                    var file = e.target.files[0];
                    if (file) {
                        var reader = new FileReader();
                        reader.onload = function (e) {
                            var img = document.createElement('img');
                            img.src = e.target.result;
                            img.className = 'rounded-circle mx-auto d-block';
                            img.style.width = '200px';
                            img.style.height = '200px';
                            img.style.objectFit = 'cover';
                            var preview = document.getElementById('photoPreview');
                            preview.innerHTML = '';
                            preview.appendChild(img);
                        };
                        reader.readAsDataURL(file);
                    }
                });
            }

            var quill = new Quill('#editor-container', {
                theme: 'snow',
                modules: {
                    toolbar: [
                        [{ 'header': [1, 2, 3, false] }],
                        ['bold', 'italic', 'underline', 'strike'],
                        [{ 'list': 'ordered' }, { 'list': 'bullet' }],
                        ['blockquote', 'code-block'],
                        ['link'],
                        ['clean']
                    ]
                }
            });

            @if (Model != null && !string.IsNullOrEmpty(Model.Description))
            {
                <text>
                    try {
                        var content = @Html.Raw(Json.Encode(Model.Description));
                        quill.clipboard.dangerouslyPasteHTML(content);
                    } catch(e) {
                         console.error("Lỗi load nội dung cũ:", e);
                    }
                </text>
            }

            var form = document.getElementById('editCompanyForm');
            if(form) {
                form.addEventListener('submit', function () {
                    document.getElementById('hiddenDescription').value = quill.root.innerHTML;
                });
            }
        });
    </script>
}