@model Project_Recruiment_Huce.Areas.Admin.Models.EditCompanyVm
@{
    ViewBag.Title = "Sửa công ty";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<link rel="stylesheet" href="https://unpkg.com/leaflet-geosearch@3.8.0/dist/geosearch.css" />

<style>
    .map-container-style {
        height: 450px;
        width: 100%;
        border-radius: 4px;
        z-index: 1;
    }

    .modal-dialog {
        max-width: 900px;
    }

    .leaflet-control-geosearch {
        z-index: 9999 !important;
    }

        .leaflet-control-geosearch form {
            background: white;
            border-radius: 4px;
            box-shadow: 0 1px 5px rgba(0,0,0,0.65);
        }

    .results.active {
        background: white;
        border: 1px solid #ccc;
        margin-top: 5px;
        max-height: 200px;
        overflow-y: auto;
    }
</style>

<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0"> <i class="bi bi-pencil-square"> </i> Chỉnh sửa công ty</h5>
    </div>
    <div class="card-body">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage </li>
                    }
                </ul>
            </div>
        }

        @using (Html.BeginForm("Edit", "Companies", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data", id = "editCompanyForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.CompanyId)
            @Html.HiddenFor(m => m.CurrentPhotoId)
            @Html.HiddenFor(m => m.CurrentPhotoUrl)

            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        @Html.LabelFor(m => m.CompanyName, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", placeholder = "Nhập tên công ty" })
                        @Html.ValidationMessageFor(m => m.CompanyName, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.TaxCode, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.TaxCode, new { @class = "form-control", placeholder = "Nhập mã số thuế" })
                        @Html.ValidationMessageFor(m => m.TaxCode, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Industry, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Industry, new { @class = "form-control", placeholder = "Nhập lĩnh vực" })
                        @Html.ValidationMessageFor(m => m.Industry, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Address, new { @class = "control-label" })
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @id = "AddressInput", placeholder = "Nhập địa chỉ hoặc chọn trên bản đồ..." })
                            <div class="input-group-append">
                                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#mapModal" id="openMapModalBtn">
                                    <i class="fas fa-map-marker-alt"> </i> Chọn trên Map
                                </button>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Phone, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Nhập số điện thoại" })
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Fax, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Fax, new { @class = "form-control", placeholder = "Nhập số Fax" })
                        @Html.ValidationMessageFor(m => m.Fax, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.CompanyEmail, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.CompanyEmail, new { @class = "form-control", type = "email", placeholder = "Nhập email" })
                        @Html.ValidationMessageFor(m => m.CompanyEmail, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Website, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Website, new { @class = "form-control", type = "url", placeholder = "https://example.com" })
                        @Html.ValidationMessageFor(m => m.Website, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Description, new { @class = "form-label" })
                        @Html.HiddenFor(m => m.Description, new { id = "hiddenDescription" })
                        <div id="editor-container" style="height: 300px; background-color: white;"> </div>
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.Active, new { @class = "form-check-input" })
                            @Html.LabelFor(m => m.Active, new { @class = "form-check-label" })
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0"> Logo</h6>
                        </div>
                        <div class="card-body text-center">
                            <div id="photoPreview" class="mb-3">
                                @if (!string.IsNullOrEmpty(Model.CurrentPhotoUrl))
                                {
                                    <img src="@Url.Content(Model.CurrentPhotoUrl)" alt="Current Logo" class="rounded-circle mx-auto d-block" style="width: 200px; height: 200px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white mx-auto" style="width: 200px; height: 200px;">
                                        <i class="bi bi-camera" style="font-size: 60px;"> </i>
                                    </div>
                                }
                            </div>
                            <div class="mb-3">
                                @Html.LabelFor(m => m.PhotoFile, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.PhotoFile, new { @class = "form-control", type = "file", accept = "image/*" })
                            </div>
                            <small class="text-muted"> Để trống nếu không muốn thay đổi logo</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-3">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-x-circle"> </i> Hủy
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"> </i> Cập nhật
                </button>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="mapModal" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> Chọn vị trí</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"> </button>
            </div>
            <div class="modal-body">
                <div class="bg-light p-2 border rounded">
                    <div id="mapPicker" class="map-container-style"> </div>
                </div>
                <p class="text-muted small mt-2 text-center mb-0"> * Sử dụng thanh tìm kiếm hoặc click trực tiếp vào bản đồ.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"> Đóng</button>
                <button type="button" class="btn btn-success" id="btnConfirmLocation"> Xác nhận địa chỉ này</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet-geosearch@3.8.0/dist/geosearch.umd.js"></script>

    <script>
        $(document).ready(function () {
            var map, marker, currentAddress = "";
            var isLocationValid = ($('#AddressInput').val() || '').trim() !== "";

            function cleanAddress(fullAddress) {
                if (!fullAddress) return "";
                return fullAddress.split(',').filter(function (part) {
                    return !/^\d{5,6}$/.test(part.trim());
                }).join(',').trim();
            }

            function initMap() {
                if (map) {
                    setTimeout(function () { map.invalidateSize(); }, 200);
                    return;
                }

                map = L.map('mapPicker').setView([21.0285, 105.8542], 13);

                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '&copy; OpenStreetMap'
                }).addTo(map);

                const provider = new GeoSearch.OpenStreetMapProvider({
                    params: { 'accept-language': 'vi', countrycodes: 'vn' }
                });

                const searchControl = new GeoSearch.GeoSearchControl({
                    provider: provider,
                    style: 'bar',
                    autoClose: true,
                    searchLabel: 'Nhập địa chỉ cụ thể...',
                    keepResult: true,
                    updateMap: true
                });
                map.addControl(searchControl);

                map.on('click', function (e) {
                    updateLocation(e.latlng.lat, e.latlng.lng, null);
                });

                map.on('geosearch/showlocation', function (result) {
                    updateLocation(result.location.y, result.location.x, result.location.label);
                });
            }

            function updateLocation(lat, lng, label) {
                if (!label) {
                    $('#AddressInput').attr('placeholder', 'Đang lấy địa chỉ...');
                    $.ajax({
                        url: `https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lng}&zoom=18&addressdetails=1`,
                        headers: { 'Accept-Language': 'vi' },
                        success: function (data) {
                            if (data && data.display_name) {
                                processAddress(data.display_name, lat, lng);
                            }
                        }
                    });
                } else {
                    processAddress(label, lat, lng);
                }
            }

            function processAddress(raw, lat, lng) {
                currentAddress = cleanAddress(raw);

                if (marker) {
                    marker.setLatLng([lat, lng]).bindPopup(currentAddress).openPopup();
                } else {
                    marker = L.marker([lat, lng]).addTo(map).bindPopup(currentAddress).openPopup();
                }
                map.setView([lat, lng], 16);

                if (currentAddress) {
                    isLocationValid = true;
                }
            }

            $('#openMapModalBtn').on('click', function () {
                $('#mapModal').modal('show');
            });

            $('#mapModal').on('shown.bs.modal', function () {
                initMap();
                setTimeout(function () {
                    if (map) map.invalidateSize();
                }, 100);
            });

            $(document).on('click', '#btnConfirmLocation', function () {
                if (currentAddress) {
                    var inputField = $('#AddressInput');

                    inputField.val(currentAddress);
                    $('#mapModal').modal('hide');

                    isLocationValid = true;

                    if (inputField.hasClass('input-validation-error')) {
                        inputField.valid();
                    }
                } else {
                    alert("Vui lòng chọn một vị trí trên bản đồ trước khi xác nhận.");
                }
            });

            $('#AddressInput').on('input', function () {
                isLocationValid = false;
            });

            $('#createCompanyForm').on('submit', function (e) {
                if (!isLocationValid) {
                    e.preventDefault();
                    alert("Vui lòng xác thực địa chỉ bằng cách chọn trên bản đồ trước khi tạo công ty.");
                    $('#openMapModalBtn').focus();
                    return false;
                }
            });
        });

    document.addEventListener("DOMContentLoaded", function() {

            var photoInput = document.getElementById('PhotoFile');
            if (photoInput) {
                photoInput.addEventListener('change', function (e) {
                    var file = e.target.files[0];
                    if (file) {
                        var reader = new FileReader();
                        reader.onload = function (e) {
                            var img = document.createElement('img');
                            img.src = e.target.result;
                            img.className = 'rounded-circle mx-auto d-block';
                            img.style.width = '200px';
                            img.style.height = '200px';
                            img.style.objectFit = 'cover';
                            var preview = document.getElementById('photoPreview');
                            preview.innerHTML = '';
                            preview.appendChild(img);
                        };
                        reader.readAsDataURL(file);
                    }
                });
            }

            var quill = new Quill('#editor-container', {
                theme: 'snow',
                modules: {
                    toolbar: [
                        [{ 'header': [1, 2, 3, false] }],
                        ['bold', 'italic', 'underline', 'strike'],
                        [{ 'list': 'ordered' }, { 'list': 'bullet' }],
                        ['blockquote', 'code-block'],
                        ['link'],
                        ['clean']
                    ]
                }
            });

            @if (Model != null && !string.IsNullOrEmpty(Model.Description))
            {
                <text>
                    try {
                        var content = @Html.Raw(Json.Encode(Model.Description));
                        quill.clipboard.dangerouslyPasteHTML(content);
                    } catch(e) {
                         console.error("Lỗi load nội dung cũ:", e);
                    }
                </text>
            }

            var form = document.getElementById('editCompanyForm');
            if(form) {
                form.addEventListener('submit', function () {
                    document.getElementById('hiddenDescription').value = quill.root.innerHTML;
                });
            }
        });
    </script>
}