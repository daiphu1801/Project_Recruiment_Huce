@model List<Project_Recruiment_Huce.Areas.Admin.Models.AccountListVm>
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")
@Html.Partial("~/Areas/Admin/Views/Shared/_TableToolbar.cshtml", (Request["q"] ?? ""))

<div class="card mb-4">
  <div class="card-body table-responsive p-0">
    <table class="table table-hover">
      <thead><tr>
        <th>Tên đăng nhập</th><th>Email</th><th>Điện thoại</th><th>Vai trò</th><th>Hoạt động</th><th>Ngày tạo</th><th></th>
      </tr></thead>
      <tbody>
      @foreach (var item in Model) {
        <tr>
          <td>@item.Username</td>
          <td>@item.Email</td>
          <td>@item.Phone</td>
          <td>@item.Role</td>
          <td>@(item.Active ? "Yes" : "No")</td>
          <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
          <td>
            <a class="btn btn-sm btn-outline-primary" title="Chi tiết" href="@Url.Action("Details", new { id = item.AccountId })"><i class="bi bi-eye me-1"></i>Chi tiết</a>
          </td>
        </tr>
      }
      </tbody>
    </table>
  </div>
</div>

@Html.Partial("~/Areas/Admin/Views/Shared/_Pagination.cshtml", new { PageIndex = 1, TotalPages = 1, BaseUrl = Url.Action("Index", new { q = Request["q"], role = Request["role"] }) })


