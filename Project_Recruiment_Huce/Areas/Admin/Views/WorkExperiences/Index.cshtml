@model List<Project_Recruiment_Huce.Areas.Admin.Models.WorkExperienceVm>
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

<div class="card mb-4">
  <div class="card-body table-responsive p-0">
    <table class="table table-hover">
      <thead><tr>
        <th>Công ty</th><th>Chức danh</th><th>Bắt đầu</th><th>Kết thúc</th><th></th>
      </tr></thead>
      <tbody>
      @foreach (var item in Model) {
        <tr>
          <td>@item.CompanyName</td>
          <td>@item.JobTitle</td>
          <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
          <td>@(item.EndDate.HasValue ? item.EndDate.Value.ToString("dd/MM/yyyy") : "Hiện tại")</td>
          <td><a class="btn btn-sm btn-outline-primary" href="@Url.Action("Details", new { id = item.ExperienceId })"><i class="bi bi-eye me-1"></i>Chi tiết</a></td>
        </tr>
      }
      </tbody>
    </table>
  </div>
</div>


