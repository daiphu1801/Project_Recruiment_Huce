@model List<Project_Recruiment_Huce.Areas.Admin.Models.JobPostListVm>
@using Project_Recruiment_Huce.Areas.Admin.Models
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")
@{
  ViewBag.ShowEmployment = true;
  ViewBag.CenterSearch = true; // thu nhỏ & căn giữa ô tìm kiếm cho trang này
  ViewBag.SearchWidth = "320px"; // có thể chỉnh 280-360px tùy ý
}
@Html.Partial("~/Areas/Admin/Views/Shared/_TableToolbar.cshtml", (Request["q"] ?? ""))

<div class="d-flex justify-content-end mb-3">
  <a class="btn btn-primary" href="@Url.Action("Create")">
    <i class="bi bi-plus-lg me-1"></i>Thêm bài đăng
  </a>
  @* Đặt các nút bulk khác ở đây nếu cần *@
</div>

<div class="card mb-4">
  <div class="card-body table-responsive p-0">
    <table class="table table-hover">
      <thead><tr>
        <th>Mã</th><th>Tiêu đề</th><th>Công ty</th><th>Nhà tuyển dụng</th>
        <th>Lương</th><th>Hình thức</th><th>Hạn nộp</th><th>Trạng thái</th><th>Đăng lúc</th><th></th>
      </tr></thead>
      <tbody>
      @foreach (var item in Model) {
        <tr>
          <td>@item.JobCode</td>
          <td>@item.Title</td>
          <td>@item.CompanyName</td>
          <td>@item.RecruiterName</td>
          <td>@(AdminUiHelpers.FormatMoney(item.SalaryMin)) - @(AdminUiHelpers.FormatMoney(item.SalaryMax)) @item.SalaryUnit</td>
          <td>@item.Employment</td>
          <td>@(item.Deadline.HasValue ? item.Deadline.Value.ToString("dd/MM/yyyy") : "")</td>
          <td>@Html.Partial("~/Areas/Admin/Views/Shared/_StatusBadge.cshtml", System.Tuple.Create(item.Status, "JobPosts"))</td>
          <td>@item.PostedAt.ToString("dd/MM/yyyy")</td>
          <td class="text-end" style="white-space:nowrap;">
            @Html.Partial("~/Areas/Admin/Views/Shared/_RowActions.cshtml", new System.Collections.Generic.Dictionary<string,string>{
              {"Details", Url.Action("Details", new { id = item.JobId })},
              {"Edit", Url.Action("Edit", new { id = item.JobId })},
              {"Delete", Url.Action("Delete", new { id = item.JobId })}
            })
            <a class="btn btn-sm btn-outline-secondary ms-1" href="@Url.Action("Index","JobPostDetails", new { area="Admin", jobId = item.JobId })" title="Yêu cầu"><i class="bi bi-info-circle"></i></a>
          </td>
        </tr>
      }
      </tbody>
    </table>
  </div>
</div>

@Html.Partial("~/Areas/Admin/Views/Shared/_Pagination.cshtml", new { PageIndex = 1, TotalPages = 1, BaseUrl = Url.Action("Index", new { q = Request["q"], status = Request["status"], companyId = Request["companyId"], recruiterId = Request["recruiterId"] }) })


