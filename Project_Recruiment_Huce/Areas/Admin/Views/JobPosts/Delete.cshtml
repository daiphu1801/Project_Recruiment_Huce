@model Project_Recruiment_Huce.Areas.Admin.Models.JobPostListVm
@using Project_Recruiment_Huce.Areas.Admin.Models
@{
    ViewBag.Title = "Xóa tin tuyển dụng";
}
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

<div class="alert alert-warning d-flex align-items-center" role="alert">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    <div>
        <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa tin tuyển dụng này?
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h5 class="card-title mb-0"><i class="bi bi-trash"></i> Xác nhận xóa tin tuyển dụng</h5>
    </div>

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã tin tuyển dụng:</dt>
            <dd class="col-sm-9">@Model.JobCode</dd>

            <dt class="col-sm-3">Tiêu đề:</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Công ty:</dt>
            <dd class="col-sm-9">@Model.CompanyName</dd>

            <dt class="col-sm-3">Nhà tuyển dụng:</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">Mức lương:</dt>
            <dd class="col-sm-9">
                @(Model.SalaryFrom?.ToString("N0") ?? "0") - @(Model.SalaryTo?.ToString("N0") ?? "0") VNĐ
            </dd>

            <dt class="col-sm-3">Hình thức làm việc:</dt>
            <dd class="col-sm-9">@Model.EmploymentType</dd>

            <dt class="col-sm-3">Trạng thái:</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Ngày đăng:</dt>
            <dd class="col-sm-9">@Model.PostedAt.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Cập nhật gần nhất:</dt>
            <dd class="col-sm-9">@Model.UpdatedAt.ToString("dd/MM/yyyy")</dd>
        </dl>

        @using (Html.BeginForm("DeleteConfirmed", "JobPosts", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.JobPostID)

            <div class="alert alert-danger mt-3">
                <strong>Lưu ý:</strong> Hành động này <u>không thể hoàn tác</u>.
                Dữ liệu của tin tuyển dụng sẽ bị xóa vĩnh viễn khỏi hệ thống.
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a href="@Url.Action("Index", "JobPosts")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Hủy
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xác nhận xóa
                </button>
            </div>
        }
    </div>
</div>
