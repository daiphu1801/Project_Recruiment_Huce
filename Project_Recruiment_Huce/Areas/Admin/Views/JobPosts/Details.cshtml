@model Project_Recruiment_Huce.Areas.Admin.Models.JobPostListVm
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header"><h5 class="card-title">Tin tuyển dụng</h5></div>
      <div class="card-body">
        <div class="row mb-2"><div class="col-4 text-secondary">Mã</div><div class="col-8">@Model.JobCode</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Tiêu đề</div><div class="col-8">@Model.Title</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Công ty</div><div class="col-8">@Model.CompanyName</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Nhà tuyển dụng</div><div class="col-8">@Model.RecruiterName</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Lương</div><div class="col-8">@Project_Recruiment_Huce.Areas.Admin.Models.AdminUiHelpers.FormatMoney(Model.SalaryMin) - @Project_Recruiment_Huce.Areas.Admin.Models.AdminUiHelpers.FormatMoney(Model.SalaryMax) @Model.SalaryUnit</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Hình thức</div><div class="col-8">@Model.Employment</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Hạn nộp</div><div class="col-8">@(Model.Deadline.HasValue ? Model.Deadline.Value.ToString("dd/MM/yyyy") : "")</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Trạng thái</div><div class="col-8">@Html.Partial("~/Areas/Admin/Views/Shared/_StatusBadge.cshtml", System.Tuple.Create(Model.Status, "JobPosts"))</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Đăng lúc</div><div class="col-8">@Model.PostedAt.ToString("dd/MM/yyyy")</div></div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card"><div class="card-header"><h6 class="mb-0">Liên quan</h6></div>
      <div class="card-body">
        <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Index","JobPostDetails", new { area="Admin", jobId = Model.JobId })">Yêu cầu công việc</a>
        <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Index","Applications", new { area="Admin", q = Model.Title })">Hồ sơ ứng tuyển</a>
      </div>
    </div>
  </div>
</div>


