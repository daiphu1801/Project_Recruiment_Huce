@model Project_Recruiment_Huce.Areas.Admin.Models.JobPostDetailVm
@using Project_Recruiment_Huce.Areas.Admin.Models

@{
    ViewBag.Title = "Chi tiết Tin tuyển dụng: " + (Model.Title ?? "N/A");
}

@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

<div class="row g-4">
    <!-- Cột bên trái: Thông tin chính -->
    <div class="col-lg-8">
        <!-- Card thông tin tin tuyển dụng -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white text-black d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-briefcase-fill me-2"></i>@Model.Title
                </h5>
                <span class="badge bg-light text-dark">#@Model.JobCode</span>
            </div>
            <div class="card-body">
                <!-- Thông tin cơ bản -->
                <div class="row g-3 mb-4 pb-3 border-bottom">
                    <div class="col-md-6">
                        <div class="d-flex mb-3">
                            <div class="text-black" style="min-width: 140px;">
                                <i class="bi bi-briefcase me-1"></i>Loại hình:
                            </div>
                            <div class="fw-semibold">@Model.EmploymentType</div>
                        </div>
                        <div class="d-flex mb-3">
                            <div class="text-black" style="min-width: 140px;">
                                <i class="bi bi-geo-alt me-1"></i>Địa điểm:
                            </div>
                            <div>@(Model.Location ?? "Chưa cập nhật")</div>
                        </div>
                        <div class="d-flex mb-3">
                            <div class="text-black" style="min-width: 140px;">
                                <i class="bi bi-calendar-check me-1"></i>Ngày đăng:
                            </div>
                            <div>@Model.PostedAt.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex mb-3">
                            <div class="text-black" style="min-width: 140px;">
                                <i class="bi bi-clock-history me-1"></i>Cập nhật lúc:
                            </div>
                            <div>@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                        <div class="d-flex mb-3">
                            <div class="text-black" style="min-width: 140px;">
                                <i class="bi bi-calendar-x me-1"></i>Hạn nộp:
                            </div>
                            <div class="text-black fw-semibold">
                                @(Model.ApplicationDeadline.HasValue ? Model.ApplicationDeadline.Value.ToString("dd/MM/yyyy") : "Vô thời hạn")
                            </div>
                        </div>
                        <div class="d-flex mb-3">
                            <div class="text-black" style="min-width: 140px;">
                                <i class="bi bi-flag me-1"></i>Trạng thái:
                            </div>
                            <div>
                                @Html.Partial("~/Areas/Admin/Views/Shared/_StatusBadge.cshtml", System.Tuple.Create(Model.Status, "JobPosts"))
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Mức lương -->
                <div class="alert bg-white text-black border d-flex align-items-center mb-4" role="alert">
                    <i class="bi bi-cash-stack fs-3 me-3 text-black"></i>
                    <div>
                        <h6 class="mb-1">Mức lương</h6>
                        <div class="fs-5 fw-bold">
                            @if (Model.SalaryFrom.HasValue && Model.SalaryTo.HasValue)
                            {
                                @:@AdminUiHelpers.FormatMoney(Model.SalaryFrom.Value) - @AdminUiHelpers.FormatMoney(Model.SalaryTo.Value) @Model.SalaryCurrency
                            }
                            else
                            {
                                @:Thỏa thuận
                            }
                        </div>
                    </div>
                </div>

                <!-- Mô tả công việc -->
                <div class="mb-4">
                    <h6 class="border-start border-4 border-primary ps-3 mb-3">
                        <i class="bi bi-file-text me-2"></i>Mô tả công việc
                    </h6>
                    <div class="p-3 bg-light rounded">
                        @if (!string.IsNullOrWhiteSpace(Model.Description))
                        {
                            @Html.Raw(Model.Description)
                        }
                        else
                        {
                            <p class="text-muted mb-0">Chưa có mô tả công việc.</p>
                        }
                    </div>
                </div>

                <!-- Yêu cầu công việc -->
                <div class="mb-4">
                    <h6 class="border-start border-4 border-primary ps-3 mb-3">
                        <i class="bi bi-check2-square me-2"></i>Yêu cầu công việc
                    </h6>
                    <div class="p-3 bg-light rounded">
                        @if (!string.IsNullOrWhiteSpace(Model.Requirements))
                        {
                            @Html.Raw(Model.Requirements)
                        }
                        else
                        {
                            <p class="text-muted mb-0">Chưa có yêu cầu công việc.</p>
                        }
                    </div>
                </div>

                <!-- Nút hành động -->
                <div class="d-flex gap-2 mt-4">
                    <a href="@Url.Action("Edit", "JobPosts", new { id = Model.JobPostID })" class="btn btn-warning">
                        <i class="bi bi-pencil-square me-1"></i>Chỉnh sửa
                    </a>
                    <a href="@Url.Action("Delete", "JobPosts", new { id = Model.JobPostID })" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Xóa
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Cột bên phải: Thông tin công ty và yêu cầu ứng viên -->
    <div class="col-lg-4">
        <!-- Card thông tin công ty & nhà tuyển dụng -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white text-black">
                <h6 class="mb-0">
                    <i class="bi bi-building me-2"></i>Thông tin công ty
                </h6>
            </div>
            <div class="card-body">
                @if (Model.CompanyID.HasValue)
                {
                    <div class="mb-3">
                        <h6 class="text-primary mb-2">@Model.CompanyName</h6>
                        @if (!string.IsNullOrWhiteSpace(Model.Address))
                        {
                            <p class="mb-2 small">
                                <i class="bi bi-geo-alt-fill text-muted me-1"></i>
                                @Model.Address
                            </p>
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.Website))
                        {
                            <p class="mb-0 small">
                                <i class="bi bi-globe text-muted me-1"></i>
                                <a href="@Model.Website" target="_blank" class="text-decoration-none">
                                    @Model.Website
                                </a>
                            </p>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted mb-3">Chưa có thông tin công ty</p>
                }

                <hr class="my-3">

                <!-- Thông tin nhà tuyển dụng -->
                <h6 class="text-secondary mb-2">
                    <i class="bi bi-person-badge me-1"></i>Người liên hệ
                </h6>
                <div class="ms-3">
                    <p class="mb-2">
                        <strong>@Model.FullName</strong>
                    </p>
                    @if (!string.IsNullOrWhiteSpace(Model.PositionTitle))
                    {
                        <p class="mb-2 small text-muted">
                            <i class="bi bi-briefcase me-1"></i>@Model.PositionTitle
                        </p>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.Phone))
                    {
                        <p class="mb-0 small">
                            <i class="bi bi-telephone-fill me-1"></i>
                            <a href="tel:@Model.Phone" class="text-decoration-none">@Model.Phone</a>
                        </p>
                    }
                </div>
            </div>
        </div>

        <!-- Card yêu cầu ứng viên -->
        <div class="card shadow-sm">
            <div class="card-header bg-white text-black">
                <h6 class="mb-0">
                    <i class="bi bi-person-check me-2"></i>Yêu cầu ứng viên
                </h6>
            </div>
            <div class="card-body">
                @if (Model.DetailID > 0)
                {
                    <div class="requirement-list">
                        <div class="d-flex justify-content-between mb-2 pb-2 border-bottom">
                            <span class="text-muted">Ngành nghề:</span>
                            <span class="fw-semibold">@(Model.Industry ?? "N/A")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2 pb-2 border-bottom">
                            <span class="text-muted">Chuyên ngành:</span>
                            <span class="fw-semibold">@(Model.Major ?? "N/A")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2 pb-2 border-bottom">
                            <span class="text-muted">Kinh nghiệm:</span>
                            <span class="fw-semibold">@Model.YearsExperience năm</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2 pb-2 border-bottom">
                            <span class="text-muted">Bằng cấp:</span>
                            <span class="fw-semibold">@(Model.DegreeRequired ?? "Không yêu cầu")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2 pb-2 border-bottom">
                            <span class="text-muted">Số lượng:</span>
                            <span class="badge bg-primary">@Model.Headcount người</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2 pb-2 border-bottom">
                            <span class="text-muted">Giới tính:</span>
                            <span class="fw-semibold">@(Model.GenderRequirement ?? "Không yêu cầu")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2 pb-2 border-bottom">
                            <span class="text-muted">Độ tuổi:</span>
                            <span class="fw-semibold">
                                @if (Model.AgeFrom.HasValue || Model.AgeTo.HasValue)
                                {
                                    <text>@(Model.AgeFrom ?? 18) - @(Model.AgeTo ?? 60) tuổi</text>
                                }
                                else
                                {
                                    <text>Không yêu cầu</text>
                                }
                            </span>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(Model.Skills))
                        {
                            <div class="mt-3">
                                <span class="text-muted d-block mb-2">Kỹ năng yêu cầu:</span>
                                <div class="p-2 bg-light rounded small">
                                    @Model.Skills
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mb-0" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Chưa có thông tin chi tiết yêu cầu ứng viên
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Nút quay lại -->
<div class="mt-4">
    <a href="@Url.Action("Index", "JobPosts")" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Quay lại danh sách
    </a>
</div>

<style>
    .requirement-list .d-flex {
        font-size: 0.9rem;
    }

    .card-header {
        font-weight: 500;
    }

    .alert-success {
        border-left: 4px solid #198754;
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }

    .border-start {
        border-left-width: 4px !important;
    }
</style>