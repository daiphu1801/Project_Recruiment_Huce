@model List<Project_Recruiment_Huce.Areas.Admin.Models.BankCardListVm>
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")
@Html.Partial("~/Areas/Admin/Views/Shared/_TableToolbar.cshtml", (Request["q"] ?? ""))  @* q not used but toolbar provides filters *@

<div class="card mb-4">
  <div class="card-body table-responsive p-0">
    <table class="table table-hover">
      <thead><tr>
        <th>Công ty</th><th>Số thẻ</th><th>Ngân hàng</th><th>Hoạt động</th><th></th>
      </tr></thead>
      <tbody>
      @foreach (var item in Model) {
        <tr>
          <td>@item.CompanyName</td>
          <td>@item.MaskedNumber</td>
          <td>@item.BankName</td>
          <td>@(item.Active?"Yes":"No")</td>
          <td><a class="btn btn-sm btn-outline-primary" href="@Url.Action("Details", new { id = item.CardId })"><i class="bi bi-eye me-1"></i>Chi tiết</a></td>
        </tr>
      }
      </tbody>
    </table>
  </div>
</div>


