@model dynamic
@{
    int pageIndex = 1; int totalPages = 1; string baseUrl = "#";
    try { pageIndex = (int)Model.PageIndex; } catch { }
    try { totalPages = (int)Model.TotalPages; } catch { }
    try { baseUrl = (string)Model.BaseUrl; } catch { }
    Func<int, string> pageUrl = p => baseUrl + (baseUrl.Contains("?") ? "&" : "?") + "page=" + p;
}
<nav aria-label="Page navigation" class="mt-3">
  <ul class="pagination">
    <li class="page-item @(pageIndex <= 1 ? "disabled" : "")">
      <a class="page-link" href="@(pageIndex <= 1 ? "#" : pageUrl(pageIndex-1))">Trước</a>
    </li>
    <li class="page-item disabled"><span class="page-link">Trang @pageIndex / @totalPages</span></li>
    <li class="page-item @(pageIndex >= totalPages ? "disabled" : "")">
      <a class="page-link" href="@(pageIndex >= totalPages ? "#" : pageUrl(pageIndex+1))">Sau</a>
    </li>
  </ul>
</nav>


