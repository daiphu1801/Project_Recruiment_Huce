        if (identity != null)
        {
            var roleClaim = identity.FindFirst(System.Security.Claims.ClaimTypes.Role);
            if (roleClaim == null || roleClaim.Value != "Admin")
            {
                Response.Redirect(Url.Action("Login", "Auth", new { area = "Admin" }));
                return;
