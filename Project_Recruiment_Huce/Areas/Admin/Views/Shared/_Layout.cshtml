                                if (Request.IsAuthenticated)
                                {
                                    var idClaim = (User != null && User.Identity != null) ? ((System.Security.Claims.ClaimsIdentity)User.Identity).FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier) : null;
                                    if (idClaim != null)
                                    {
                                        var accId = int.Parse(idClaim.Value);
                                        using (var adb = new Project_Recruiment_Huce.Models.JOBPORTAL_ENDataContext(System.Configuration.ConfigurationManager.ConnectionStrings["JOBPORTAL_ENConnectionString"].ConnectionString))
                                        {
                                            adb.ObjectTrackingEnabled = false;
                                            var acc = adb.Accounts.FirstOrDefault(a => a.AccountID == accId);
                                            if (acc != null && acc.PhotoID.HasValue)
                                            {
                                                var photo = adb.ProfilePhotos.FirstOrDefault(p => p.PhotoID == acc.PhotoID.Value);
                                                if (photo != null) { adminAvatarUrl = Url.Content(photo.FilePath); }
                                            }
                                            var ad = adb.Admins.FirstOrDefault(x => x.AccountID == accId);
                                            if (ad != null) { adminFullName = ad.FullName; }
                                        }
                                    }
                                }
                            }
                            catch { }
                            var showName = adminFullName ?? (Request.IsAuthenticated ? User.Identity.Name : "Guest");
                        }
