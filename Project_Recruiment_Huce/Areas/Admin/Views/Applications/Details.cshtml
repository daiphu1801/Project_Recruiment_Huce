@model Project_Recruiment_Huce.Areas.Admin.Models.ApplicationListVm
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

@{
    ViewBag.Title = "Chi tiết hồ sơ";
}

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header"><h5 class="card-title">Thông tin hồ sơ ứng tuyển</h5></div>
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-4 text-secondary">Mã hồ sơ</div>
                    <div class="col-8">#@Model.ApplicationId</div>
                </div>
                <div class="row mb-2">
                    <div class="col-4 text-secondary">Ứng viên</div>
                    <div class="col-8 fw-bold">@Model.CandidateName</div>
                </div>
                <div class="row mb-2">
                    <div class="col-4 text-secondary">Vị trí</div>
                    <div class="col-8">@Model.JobTitle</div>
                </div>
                <div class="row mb-2">
                    <div class="col-4 text-secondary">Công ty</div>
                    <div class="col-8 text-primary">@Model.CompanyName</div>
                </div>
                <div class="row mb-2">
                    <div class="col-4 text-secondary">Ngày nộp</div>
                    <div class="col-8">@(Model.AppliedAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")</div>
                </div>
                <div class="row mb-2">
                    <div class="col-4 text-secondary">Trạng thái</div>
                    <div class="col-8">
                        @Html.Partial("~/Areas/Admin/Views/Shared/_StatusBadge.cshtml", System.Tuple.Create(Model.AppStatus, "Applications"))
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.ResumeFilePath))
                {
                    <div class="row mb-2">
                        <div class="col-4 text-secondary">File CV</div>
                        <div class="col-8">
                            <a href="@Model.ResumeFilePath" target="_blank" class="text-decoration-none">
                                <i class="bi bi-file-earmark-pdf-fill text-danger"></i> Tải xuống / Xem
                            </a>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Note))
                {
                    <div class="row mb-2">
                        <div class="col-4 text-secondary">Ghi chú</div>
                        <div class="col-8 text-muted">@Model.Note</div>
                    </div>
                }
            </div>
        </div>
    </div>


    <div class="col-md-4">
        <div class="card">
            <div class="card-header"><h6 class="mb-0">Liên quan</h6></div>
            <div class="card-body">
                <a class="btn btn-outline-primary btn-sm"
                   href="@Url.Action("Details", "Candidates", new { area="Admin", id = Model.CandidateId })">
                     Xem Ứng viên
                </a>
                <a class="btn btn-outline-primary btn-sm"
                   href="@Url.Action("Details", "JobPosts", new { area="Admin", id = Model.JobPostId })">
                    Xem Tin tuyển dụng
                </a>
            </div>
        </div>
    </div>
</div>