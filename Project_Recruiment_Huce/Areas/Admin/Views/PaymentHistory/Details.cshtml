@model Project_Recruiment_Huce.Areas.Admin.Models.PaymentHistoryVm
@using Project_Recruiment_Huce.Areas.Admin.Models
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header"><h5 class="card-title">Thanh toán</h5></div>
      <div class="card-body">
        <div class="row mb-2"><div class="col-4 text-secondary">Công ty</div><div class="col-8">@Model.CompanyName</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Số tiền</div><div class="col-8">@AdminUiHelpers.FormatMoney(Model.Amount) đ</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Hình thức</div><div class="col-8">@Model.PaymentMethod</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Ngày</div><div class="col-8">@Model.PaymentDate.ToString("dd/MM/yyyy")</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Trạng thái</div><div class="col-8">@Model.Status</div></div>
      </div>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>


