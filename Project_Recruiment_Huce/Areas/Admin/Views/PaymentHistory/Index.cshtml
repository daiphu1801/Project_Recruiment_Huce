@model List<Project_Recruiment_Huce.Areas.Admin.Models.PaymentHistoryVm>
@using Project_Recruiment_Huce.Areas.Admin.Models
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

<div class="card mb-4">
  <div class="card-body table-responsive p-0">
    <table class="table table-hover">
      <thead><tr>
        <th>Công ty</th><th>Số tiền</th><th>Hình thức</th><th>Ngày</th><th>Trạng thái</th><th></th>
      </tr></thead>
      <tbody>
      @foreach (var item in Model) {<tr>
        <td>@item.CompanyName</td>
        <td>@AdminUiHelpers.FormatMoney(item.Amount) đ</td>
        <td>@item.PaymentMethod</td>
        <td>@item.PaymentDate.ToString("dd/MM/yyyy")</td>
        <td>@item.Status</td>
        <td><a class="btn btn-sm btn-outline-primary" href="@Url.Action("Details", new { id = item.PaymentId })"><i class="bi bi-eye me-1"></i>Chi tiết</a></td>
      </tr>}
      </tbody>
    </table>
  </div>
</div>


