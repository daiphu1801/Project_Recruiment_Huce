@model Project_Recruiment_Huce.Areas.Admin.Models.PhotoVm
@{
    ViewBag.Title = "Xóa ảnh";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

<div class="alert alert-warning">
    <i class="bi bi-exclamation-triangle"></i>
    Bạn có chắc chắn muốn xóa ảnh này không?
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0"><i class="bi bi-trash"></i> Xác nhận xóa ảnh</h5>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <table class="table table-borderless">
                    <tr>
                        <th width="150">ID:</th>
                        <td>@Model.PhotoId</td>
                    </tr>
                    <tr>
                        <th>Tên file:</th>
                        <td>@Model.FileName</td>
                    </tr>
                    <tr>
                        <th>Đường dẫn:</th>
                        <td>@Model.FilePath</td>
                    </tr>
                    <tr>
                        <th>Kích thước:</th>
                        <td>@Model.SizeKB KB</td>
                    </tr>
                    <tr>
                        <th>Ngày tải lên:</th>
                        <td>@(Model.UploadedAt?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa có")</td>
                    </tr>
                </table>
            </div>

            <div class="col-md-4 text-center">
                @if (!string.IsNullOrEmpty(Model.FilePath))
                {
                    <img src="@Model.FilePath" alt="@Model.FileName" class="img-fluid rounded mb-3"
                         style="max-width: 250px; height: auto;" />
                }
                else
                {
                    <div class="bg-secondary text-white d-flex align-items-center justify-content-center mb-3"
                         style="width: 250px; height: 250px;">
                        <i class="bi bi-image" style="font-size:80px;"></i>
                    </div>
                }
            </div>
        </div>

        @using (Html.BeginForm("Delete", "Photos", FormMethod.Post))
        {
            @Html.AntiForgeryToken() 
            @Html.HiddenFor(x => x.PhotoId)

            <div class="d-flex justify-content-end gap-2 mt-3">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Hủy
                </a>
                <button type="submit" class="btn btn-outline-danger">
                    <i class="bi bi-trash"></i> Xóa
                </button>
            </div>
        }
    </div>
</div>





