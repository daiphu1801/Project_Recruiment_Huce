@model List<Project_Recruiment_Huce.Areas.Admin.Models.PhotoVm>
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")
@Html.Partial("~/Areas/Admin/Views/Shared/_TableToolbar.cshtml", (Request["q"] ?? ""))

<div class="row">
  @foreach (var p in Model) {
    <div class="col-md-3 col-sm-6 mb-3">
      <div class="card h-100">
        <img class="card-img-top" src="@Url.Content(p.FilePath)" alt="@p.FileName" style="object-fit:cover;height:160px;">
        <div class="card-body">
          <div class="small text-secondary">@p.FileName</div>
          <div class="small">@(p.SizeKB.HasValue ? p.SizeKB.Value + " KB" : "")</div>
        </div>
        <div class="card-footer text-end">
          <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Details", new { id = p.PhotoId })"><i class="bi bi-eye me-1"></i>Chi tiáº¿t</a>
        </div>
      </div>
    </div>
  }
</div>


