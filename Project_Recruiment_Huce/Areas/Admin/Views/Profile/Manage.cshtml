@model Project_Recruiment_Huce.Areas.Admin.Models.ProfileVm
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header"><h5 class="card-title">Thông tin tài khoản</h5></div>
      <div class="card-body">
        <div class="row mb-2"><div class="col-4 text-secondary">ID</div><div class="col-8">@Model.AccountId</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Tên đăng nhập</div><div class="col-8">@Model.Username</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Email</div><div class="col-8">@Model.Email</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Điện thoại</div><div class="col-8">@Model.Phone</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Vai trò</div><div class="col-8">@Model.Role</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Ngày tạo</div><div class="col-8">@(Model.CreatedAt.HasValue ? Model.CreatedAt.Value.ToString("dd/MM/yyyy") : "")</div></div>
      </div>
    </div>
  </div>
</div>


