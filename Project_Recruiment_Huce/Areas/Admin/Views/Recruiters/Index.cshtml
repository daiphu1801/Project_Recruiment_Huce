@model List<Project_Recruiment_Huce.Areas.Admin.Models.RecruiterListVm>
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")
@Html.Partial("~/Areas/Admin/Views/Shared/_TableToolbar.cshtml", (Request["q"] ?? ""))

<div class="card mb-4">
  <div class="card-body table-responsive p-0">
    <table class="table table-hover">
      <thead><tr>
        <th>Họ tên</th><th>Công ty</th><th>Chức danh</th><th>Email công việc</th><th>SĐT</th><th>Ngày tạo</th><th>Hoạt động</th><th></th>
      </tr></thead>
      <tbody>
      @foreach (var item in Model) {
        <tr>
          <td>@item.FullName</td>
          <td>@item.CompanyName</td>
          <td>@item.PositionTitle</td>
          <td>@item.WorkEmail</td>
          <td>@item.Phone</td>
          <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
          <td>@(item.Active ? "Yes" : "No")</td>
          <td><a class="btn btn-sm btn-outline-primary" href="@Url.Action("Details", new { id = item.RecruiterId })"><i class="bi bi-eye me-1"></i>Chi tiết</a></td>
        </tr>
      }
      </tbody>
    </table>
  </div>
</div>
@Html.Partial("~/Areas/Admin/Views/Shared/_Pagination.cshtml", new { PageIndex = 1, TotalPages = 1, BaseUrl = Url.Action("Index", new { q = Request["q"], companyId = Request["companyId"] }) })


