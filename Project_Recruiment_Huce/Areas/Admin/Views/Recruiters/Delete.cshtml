//Recruiter Delete
@model Project_Recruiment_Huce.Areas.Admin.Models.RecruiterListVm
@{
    ViewBag.Title = "Xóa nhà tuyển dụng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

<div class="alert alert-warning">
    <i class="bi bi-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa nhà tuyển dụng này?
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0"><i class="bi bi-trash"></i> Xác nhận xóa nhà tuyển dụng</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <table class="table table-borderless">
                    <tr>
                        <th width="150">ID Nhà tuyển dụng:</th>
                        <td>@Model.RecruiterId</td>
                    </tr>
                    <tr>
                        <th>ID Tài khoản:</th>
                        <td>@Model.AccountId</td>
                    </tr>

                    <tr>
                        <th>Tên đăng nhập:</th>
                        <td>@Model.Username</td>
                    </tr>
                    <tr>
                        <th>Họ và tên:</th>
                        <td>@Model.FullName</td>
                    </tr>
                    <tr>
                        <th>Công ty:</th>
                        <td>@Model.CompanyName</td>
                    </tr>
                    <tr>
                        <th>Chức danh:</th>
                        <td>@Model.PositionTitle</td>
                    </tr>
                    <tr>
                        <th>Email:</th>
                        <td>@Model.CompanyEmail</td>
                    </tr>
                    <tr>
                        <th>Điện thoại:</th>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr>
                        <th>Ngày tạo:</th>
                        <td>@(Model.CreatedAt)</td>
                    </tr>
                    <tr>
                        <th>Trạng thái:</th>
                        <td>
                            @if (Model.ActiveFlag == 1)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Tạm khóa</span>
                            }
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4 text-center">
                @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                {
                    <img src="@Url.Content(Model.PhotoUrl)" alt="@Model.FullName" class="img-fluid rounded-circle mb-3" style="width: 200px; height: 200px; object-fit: cover;" />
                }
                else
                {
                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white mx-auto mb-3" style="width: 200px; height: 200px;">
                        <i class="bi bi-person" style="font-size: 80px;"></i>
                    </div>
                }
            </div>
        </div>

        @using (Html.BeginForm("Delete", "Recruiters", new { area = "Admin" }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.RecruiterId)

            <div class="alert alert-danger mt-3">
                <strong>Cảnh báo:</strong> Hành động này sẽ xóa vĩnh viễn cả <strong>Nhà tuyển dụng</strong> và <strong>Tài khoản</strong> liên kết. Không thể hoàn tác.
            </div>

            <div class="d-flex justify-content-end gap-2 mt-3">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Hủy
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xác nhận xóa
                </button>
            </div>
        }
    </div>
</div>