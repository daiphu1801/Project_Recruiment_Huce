@model Project_Recruiment_Huce.Areas.Admin.Models.InterviewListViewModel
@{
    ViewBag.Title = "Quản lý lịch phỏng vấn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

<div class="app-content">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="row mb-3">
            <div class="col-md-6">
                <h4><i class="bi bi-calendar-check me-2"></i>Danh sách lịch phỏng vấn</h4>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Dashboard", "InterviewManagement", new { area = "Admin" })" class="btn btn-info">
                    <i class="bi bi-bar-chart me-1"></i>Thống kê
                </a>
            </div>
        </div>

        <!-- Filter Form -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="bi bi-funnel me-2"></i>Bộ lọc</h5>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Index", "InterviewManagement", new { area = "Admin" }, FormMethod.Get, new { @class = "row g-3" }))
                {
                    <div class="col-md-3">
                        <label class="form-label">Từ ngày</label>
                        <input type="date" name="Filters.FromDate" value="@Model.Filters.FromDate?.ToString("yyyy-MM-dd")" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Đến ngày</label>
                        <input type="date" name="Filters.ToDate" value="@Model.Filters.ToDate?.ToString("yyyy-MM-dd")" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Nhà tuyển dụng</label>
                        @Html.DropDownList("Filters.RecruiterEmail", ViewBag.Recruiters as SelectList, new { @class = "form-select" })
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Tìm kiếm</label>
                        <input type="text" name="Filters.SearchTerm" value="@Model.Filters.SearchTerm" class="form-control" placeholder="Tên ứng viên, vị trí..." />
                    </div>
                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-primary"><i class="bi bi-search me-1"></i>Lọc</button>
                        <a href="@Url.Action("Index", "InterviewManagement", new { area = "Admin" })" class="btn btn-secondary"><i class="bi bi-x-circle me-1"></i>Xóa bộ lọc</a>
                    </div>
                }
            </div>
        </div>

        <!-- Results Info -->
        <div class="row mb-2">
            <div class="col-12">
                <span class="text-muted">Tổng cộng: <strong>@Model.TotalItems</strong> lịch phỏng vấn</span>
            </div>
        </div>

        <!-- Interview List Table -->
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Ứng viên</th>
                                <th>Vị trí</th>
                                <th>Nhà tuyển dụng</th>
                                <th>Ngày cập nhật</th>
                                <th>Hình thức</th>
                                <th>Địa điểm</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Interviews != null && Model.Interviews.Any())
                            {
                                foreach (var item in Model.Interviews)
                                {
                                    <tr>
                                        <td>@item.InterviewID</td>
                                        <td>
                                            <strong>@item.CandidateName</strong>
                                            <br /><small class="text-muted">@item.CandidateEmail</small>
                                        </td>
                                        <td>@item.JobTitle</td>
                                        <td>
                                            @item.RecruiterName
                                            <br /><small class="text-muted">@item.RecruiterEmail</small>
                                        </td>
                                        <td>
                                            @item.InterviewDate.ToString("dd/MM/yyyy")
                                            <br /><small class="text-muted">@item.InterviewTime</small>
                                        </td>
                                        <td>
                                            @if (item.InterviewType == "Online")
                                            {
                                                <span class="badge bg-info">Online</span>
                                            }
                                            else if (item.InterviewType == "Phone")
                                            {
                                                <span class="badge bg-warning">Phone</span>
                                            }
                                            else if (item.InterviewType == "Offline")
                                            {
                                                <span class="badge bg-success">Offline</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@item.InterviewType</span>
                                            }
                                        </td>
                                        <td>@item.Location</td>
                                        <td class="text-center">
                                            <a href="@Url.Action("Details", "InterviewManagement", new { area = "Admin", id = item.InterviewID })" 
                                               class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center py-4 text-muted">
                                        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                        Không có lịch phỏng vấn nào
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="card-footer">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center mb-0">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", "InterviewManagement", new { area = "Admin", page = Model.CurrentPage - 1, Filters = Model.Filters })">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>
                            }
                            
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                if (i == Model.CurrentPage)
                                {
                                    <li class="page-item active"><span class="page-link">@i</span></li>
                                }
                                else if (i <= 3 || i >= Model.TotalPages - 2 || Math.Abs(i - Model.CurrentPage) <= 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", "InterviewManagement", new { area = "Admin", page = i })">@i</a>
                                    </li>
                                }
                                else if (i == 4 && Model.CurrentPage > 5)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }
                                else if (i == Model.TotalPages - 3 && Model.CurrentPage < Model.TotalPages - 4)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }
                            }
                            
                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", "InterviewManagement", new { area = "Admin", page = Model.CurrentPage + 1 })">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            }
        </div>
    </div>
</div>
