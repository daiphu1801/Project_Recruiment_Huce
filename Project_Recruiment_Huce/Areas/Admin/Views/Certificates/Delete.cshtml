@model Project_Recruiment_Huce.Areas.Admin.Models.CertificateListVm
@{
    ViewBag.Title = "Xóa chứng chỉ";
}
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

<div class="alert alert-warning">
  <i class="bi bi-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa chứng chỉ này?
</div>

<div class="card">
  <div class="card-header">
    <h5 class="card-title mb-0"><i class="bi bi-trash"></i> Xác nhận xóa chứng chỉ</h5>
  </div>
  <div class="card-body">
    <table class="table table-borderless">
      <tr>
        <th width="150">ID:</th>
        <td>@Model.CertificateId</td>
      </tr>
      <tr>
        <th>Tên chứng chỉ:</th>
        <td>@Model.CertificateName</td>
      </tr>
      <tr>
        <th>Tổ chức:</th>
        <td>@Model.Issuer</td>
      </tr>
      <tr>
        <th>Lĩnh vực:</th>
        <td>@Model.Industry</td>
      </tr>
      <tr>
        <th>Chuyên ngành:</th>
        <td>@Model.Major</td>
      </tr>
    </table>

    @using (Html.BeginForm("Delete", "Certificates", FormMethod.Post))
    {
      @Html.AntiForgeryToken()
      @Html.Hidden("id", Model.CertificateId)
      
      <div class="alert alert-danger mt-3">
        <strong>Cảnh báo:</strong> Hành động này không thể hoàn tác.
      </div>

      <div class="d-flex justify-content-end gap-2 mt-3">
        <a href="@Url.Action("Index")" class="btn btn-secondary">
          <i class="bi bi-arrow-left"></i> Hủy
        </a>
        <button type="submit" class="btn btn-danger">
          <i class="bi bi-trash"></i> Xác nhận xóa
        </button>
      </div>
    }
  </div>
</div>

