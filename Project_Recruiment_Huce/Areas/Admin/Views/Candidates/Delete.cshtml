@model Project_Recruiment_Huce.Areas.Admin.Models.CandidatesListVm
@{
    ViewBag.Title = "Xóa ứng viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

<div class="alert alert-warning">
    <i class="bi bi-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa ứng viên này?
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0"><i class="bi bi-trash"></i> Xác nhận xóa ứng viên</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <table class="table table-borderless">
                    <tr>
                        <th width="150">ID:</th>
                        <td>@Model.CandidateId</td>
                    </tr>
                    <tr>
                        <th>Họ tên:</th>
                        <td>@(Model.FullName ?? "-")</td>
                    </tr>
                    <tr>
                        <th>Email:</th>
                        <td>@(Model.Email ?? "-")</td>
                    </tr>
                    <tr>
                        <th>SĐT:</th>
                        <td>@(Model.Phone ?? "-")</td>
                    </tr>
                    @* Nếu Model Candidate có thêm trường Ngày tạo hay Trạng thái, bạn thêm vào đây giống mẫu Account *@
                </table>
            </div>

            <div class="col-md-4 text-center">
                @* Lưu ý: Nếu Model CandidatesListVm của bạn có trường PhotoUrl, hãy thay thế điều kiện bên dưới.
                    Hiện tại tôi để mặc định hiển thị icon người dùng nếu không có ảnh.
                *@
                @if (Model.GetType().GetProperty("PhotoUrl") != null && !string.IsNullOrEmpty((string)Model.GetType().GetProperty("PhotoUrl")?.GetValue(Model, null)))
                {
                    <img src="@Model.GetType().GetProperty("PhotoUrl")?.GetValue(Model, null)" alt="@Model.FullName" class="img-fluid rounded-circle mb-3" style="width: 200px; height: 200px; object-fit: cover;" />
                }
                else
                {
                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white mx-auto mb-3" style="width: 200px; height: 200px;">
                        <i class="bi bi-person" style="font-size: 80px;"></i>
                    </div>
                }
            </div>
        </div>

        @using (Html.BeginForm("Delete", "Candidates", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.CandidateId)

            <div class="alert alert-danger mt-3">
                <strong>Cảnh báo:</strong> Hành động này không thể hoàn tác. Tất cả dữ liệu hồ sơ liên quan đến ứng viên này sẽ bị xóa.
            </div>

            <div class="d-flex justify-content-end gap-2 mt-3">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Hủy
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xác nhận xóa
                </button>
            </div>
        }
    </div>
</div>