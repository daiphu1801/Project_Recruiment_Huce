@model List<Project_Recruiment_Huce.Areas.Admin.Models.CandidatesListVm>
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")
@{
  ViewBag.AddUrl = Url.Action("Create");
  ViewBag.AddLabel = "Thêm ứng viên";
}
@Html.Partial("~/Areas/Admin/Views/Shared/_TableToolbar.cshtml", (Request["q"] ?? ""))

<div class="card mb-4">
  <div class="card-body table-responsive p-0">
    <table class="table table-hover">
      <thead><tr>
        <th>Ảnh</th><th>Họ tên</th><th>Email</th><th>SĐT</th><th>Ngày sinh</th><th>Giới tính</th><th>Ngày tạo</th><th>Hoạt động</th><th></th>
      </tr></thead>
      <tbody>
          @if (Model != null && Model.Any())
          {
              foreach (var item in Model)
              {
                  <tr>
                      <td>
                          @if (!string.IsNullOrEmpty(item.PhotoUrl))
                          {
                              <img src="@Url.Content(item.PhotoUrl)" alt="@item.FullName" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                          }
                          else
                          {
                              <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white" style="width: 40px; height: 40px;">
                                  <i class="bi bi-person"></i>
                              </div>
                          }
                      </td>
                      <td>@(item.FullName ?? "-")</td>
                      <td>@(item.Email ?? "-")</td>
                      <td>@(item.Phone ?? "-")</td>
                      <td>@(item.DateOfBirth?.ToString("dd/MM/yyyy") ?? "-")</td>
                      <td>@(item.Gender ?? "-")</td>
                      <td>@(item.CreatedAt?.ToString("dd/MM/yyyy") ?? "-")</td>
                      <td>@(item.ActiveFlag == 1 ? "Yes" : "No")</td>
                      <td class="text-end" style="white-space:nowrap;">
                          @Html.Partial("~/Areas/Admin/Views/Shared/_RowActions.cshtml", new System.Collections.Generic.Dictionary<string, string>{
                            {"Details", Url.Action("Details", new { id = item.CandidateId })},
                            {"Edit", Url.Action("Edit", new { id = item.CandidateId })},
                            {"Delete", Url.Action("Delete", new { id = item.CandidateId })}
                          })
                      </td>
                  </tr>
              }
          }
          else
          {
              <tr><td colspan="9" class="text-center text-muted">Không có dữ liệu</td></tr>
          }
      </tbody>
    </table>
  </div>
</div>
@Html.Partial("~/Areas/Admin/Views/Shared/_Pagination.cshtml", new { PageIndex = 1, TotalPages = 1, BaseUrl = Url.Action("Index", new { q = Request["q"] }) })


