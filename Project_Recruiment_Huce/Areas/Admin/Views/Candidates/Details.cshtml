@model Project_Recruiment_Huce.Areas.Admin.Models.CandidateListVm
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header"><h5 class="card-title">Thông tin ứng viên</h5></div>
      <div class="card-body">
        <div class="row mb-2"><div class="col-4 text-secondary">ID</div><div class="col-8">@Model.CandidateId</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Họ tên</div><div class="col-8">@Model.FullName</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Email</div><div class="col-8">@Model.Email</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">SĐT</div><div class="col-8">@Model.Phone</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Ngày sinh</div><div class="col-8">@(Model.BirthDate.HasValue ? Model.BirthDate.Value.ToString("dd/MM/yyyy") : "")</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Giới tính</div><div class="col-8">@Model.Gender</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Ngày tạo</div><div class="col-8">@Model.CreatedAt.ToString("dd/MM/yyyy")</div></div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card"><div class="card-header"><h6 class="mb-0">Liên quan</h6></div>
      <div class="card-body">
        <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Index","WorkExperiences", new { area="Admin", candidateId = Model.CandidateId })">Kinh nghiệm làm việc</a>
        <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Index","CandidateCertificates", new { area="Admin", candidateId = Model.CandidateId })">Chứng chỉ</a>
        <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Index","Applications", new { area="Admin", q = Model.FullName })">Hồ sơ ứng tuyển</a>
      </div>
    </div>
  </div>
</div>


