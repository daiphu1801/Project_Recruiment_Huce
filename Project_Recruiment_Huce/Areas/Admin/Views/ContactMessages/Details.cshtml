@model Project_Recruiment_Huce.Areas.Admin.Models.ContactMessageDetailsVm
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <!-- Message Details -->
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-envelope-fill me-2"></i>Chi tiết tin nhắn
                </h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="text-muted small">Người gửi</label>
                        <h5>@Model.FullName</h5>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted small">Email</label>
                        <h5><a href="mailto:@Model.Email">@Model.Email</a></h5>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="text-muted small">Chủ đề</label>
                    <h5>@Model.Subject</h5>
                </div>

                <div class="mb-3">
                    <label class="text-muted small">Nội dung tin nhắn</label>
                    <div class="card bg-light">
                        <div class="card-body">
                            <p style="white-space: pre-wrap;">@Model.Message</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <label class="text-muted small">Ngày gửi</label>
                        <p><i class="bi bi-calendar-event me-1"></i>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    @if (Model.ReadAt.HasValue)
                    {
                        <div class="col-md-4">
                            <label class="text-muted small">Ngày đọc</label>
                            <p><i class="bi bi-eye me-1"></i>@Model.ReadAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    }
                    @if (Model.RepliedAt.HasValue)
                    {
                        <div class="col-md-4">
                            <label class="text-muted small">Ngày trả lời</label>
                            <p><i class="bi bi-reply me-1"></i>@Model.RepliedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Admin Notes Section -->
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="bi bi-pencil-square me-2"></i>Ghi chú của Admin
                </h5>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrWhiteSpace(Model.AdminNotes))
                {
                    <div class="alert alert-info">
                        <p style="white-space: pre-wrap; margin-bottom: 0;">@Model.AdminNotes</p>
                    </div>
                }
                else
                {
                    <p class="text-muted">Chưa có ghi chú nào.</p>
                }


            </div>
        </div>
    </div>

    <!-- Actions Sidebar -->
    <div class="col-md-4">
        <!-- Status Card -->
        <div class="card mb-3">
            <div class="card-header">
                <h6 class="mb-0">Trạng thái</h6>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <span class="@Model.StatusBadgeClass" style="font-size: 1.1rem; padding: 8px 16px;">
                        @Model.StatusText
                    </span>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card mb-3">
            <div class="card-header">
                <h6 class="mb-0">Thao tác</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Edit", new { id = Model.ContactMessageID })" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Chỉnh sửa
                    </a>
                    
                    <a href="https://mail.google.com/mail/?view=cm&fs=1&to=@Model.Email&su=Re: @Uri.EscapeDataString(Model.Subject)" target="_blank" class="btn btn-success">
                        <i class="bi bi-envelope"></i> Gửi email trả lời
                    </a>
                    
                    <a href="@Url.Action("Delete", new { id = Model.ContactMessageID })" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Xóa tin nhắn
                    </a>
                </div>
            </div>
        </div>

        <!-- Contact Info Card -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Thông tin liên hệ</h6>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <small class="text-muted">Họ tên</small>
                    <p class="mb-0"><strong>@Model.FullName</strong></p>
                </div>
                <div class="mb-2">
                    <small class="text-muted">Email</small>
                    <p class="mb-0">
                        <a href="mailto:@Model.Email">@Model.Email</a>
                    </p>
                </div>
                <div>
                    <small class="text-muted">ID tin nhắn</small>
                    <p class="mb-0">#@Model.ContactMessageID</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại danh sách
    </a>
</div>
