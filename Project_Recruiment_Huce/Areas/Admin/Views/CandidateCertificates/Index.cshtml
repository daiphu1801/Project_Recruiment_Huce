@model List<Project_Recruiment_Huce.Areas.Admin.Models.CandidateCertificateVm>
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

<div class="card mb-4">
  <div class="card-body table-responsive p-0">
    <table class="table table-hover">
      <thead><tr>
        <th>Chứng chỉ</th><th>Ngày cấp</th><th>Hết hạn</th><th>Điểm</th><th></th>
      </tr></thead>
      <tbody>
      @foreach (var item in Model) {
        <tr>
          <td>@item.CertificateName</td>
          <td>@(item.IssuedDate.HasValue ? item.IssuedDate.Value.ToString("dd/MM/yyyy") : "")</td>
          <td>@(item.ExpiredDate.HasValue ? item.ExpiredDate.Value.ToString("dd/MM/yyyy") : "")</td>
          <td>@item.ScoreText</td>
          <td><a class="btn btn-sm btn-outline-primary" href="@Url.Action("Details", new { id = item.CandidateCertificateId })"><i class="bi bi-eye me-1"></i>Chi tiết</a></td>
        </tr>
      }
      </tbody>
    </table>
  </div>
</div>


