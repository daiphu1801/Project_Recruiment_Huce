@model Project_Recruiment_Huce.Areas.Admin.Models.CandidateCertificateVm
@Html.Partial("~/Areas/Admin/Views/Shared/_Breadcrumbs.cshtml")

<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header"><h5 class="card-title">Chứng chỉ</h5></div>
      <div class="card-body">
        <div class="row mb-2"><div class="col-4 text-secondary">Ứng viên</div><div class="col-8">@Model.CandidateName</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Chứng chỉ</div><div class="col-8">@Model.CertificateName</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Ngày cấp</div><div class="col-8">@(Model.IssuedDate.HasValue ? Model.IssuedDate.Value.ToString("dd/MM/yyyy") : "")</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Hết hạn</div><div class="col-8">@(Model.ExpiredDate.HasValue ? Model.ExpiredDate.Value.ToString("dd/MM/yyyy") : "")</div></div>
        <div class="row mb-2"><div class="col-4 text-secondary">Điểm</div><div class="col-8">@Model.ScoreText</div></div>
      </div>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>


