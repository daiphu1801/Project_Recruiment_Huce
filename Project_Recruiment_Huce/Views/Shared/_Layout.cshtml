                  <li><a href="testimonials.html">Testimonials</a></li>
                  <li><a href="faq.html">Frequently Ask Questions</a></li>
                  <li><a href="gallery.html">Gallery</a></li>
                </ul>
              </li>
              <li><a href="blog.html">Blog</a></li>
              <li><a href="@Url.Action("Contact","Home")">Contact</a></li>
              @{ var roleClaim2 = (User != null && User.Identity != null) ? ((System.Security.Claims.ClaimsIdentity)User.Identity).FindFirst("VaiTro") : null; }
              @if (Request.IsAuthenticated && roleClaim2 != null && (roleClaim2.Value == "Company" || roleClaim2.Value == "Recruiter"))
              {
                <li class="d-lg-none"><a href="@Url.Action("JobsCreate","Jobs")"><span class="mr-2">+</span> Post a Job</a></li>
              }
              @if (Request.IsAuthenticated)
              {
                <li class="has-children d-lg-none">
                  @{ 
                    string mAvatarUrl = null; 
                    try {
                      var idClaim = (User != null && User.Identity != null) ? ((System.Security.Claims.ClaimsIdentity)User.Identity).FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier) : null;
                      if (idClaim != null) {
                        var accId = int.Parse(idClaim.Value);
                        using (var mdb = new Project_Recruiment_Huce.Models.JOBPROTAL_ENDataContext(System.Configuration.ConfigurationManager.ConnectionStrings["JOBPORTAL_ENConnectionString"].ConnectionString)) {
                          mdb.ObjectTrackingEnabled = false;
                          var acc = mdb.Accounts.FirstOrDefault(a => a.AccountId == accId);
                          if (acc != null && acc.PhotoId.HasValue) {
                            var photo = mdb.Photos.FirstOrDefault(p => p.PhotoId == acc.PhotoId.Value);
                            if (photo != null) { mAvatarUrl = Url.Content(photo.FilePath); }
                          }
                        }
                      }
                    } catch { }
                  }
                  <a href="#"><img src="@(mAvatarUrl ?? Url.Content("~/Content/images/person_1.jpg"))" alt="avatar" style="width:24px;height:24px;border-radius:50%;object-fit:cover;margin-right:8px;" /> @User.Identity.Name</a>
                  <ul class="dropdown">
                    @{ var mobileRoleClaim = ((System.Security.Claims.ClaimsIdentity)User.Identity).FindFirst("VaiTro"); }
                    @if (mobileRoleClaim != null && mobileRoleClaim.Value == "Candidate")
                    {
                      <li><a href="@Url.Action("CandidatesManage", "Candidates")">Manage</a></li>
                    }
                    else if (mobileRoleClaim != null && mobileRoleClaim.Value == "Company")
                    {
                      <li><a href="@Url.Action("CompaniesManage", "Companies")">Manage</a></li>
                    }
                    else if (mobileRoleClaim != null && mobileRoleClaim.Value == "Recruiter")
                    {
                      <li><a href="@Url.Action("RecruitersManage", "Recruiters")">Manage</a></li>
                    }
                    else
                    {
                      <li><a href="@Url.Action("Manage", "Account")">Manage</a></li>
                    }
                    <li><a href="@Url.Action("LogOffGet", "Account")">Log Out</a></li>
                  </ul>
                </li>
              }
              else
              {
                <li class="d-lg-none"><a href="@Url.Action("Login", "Account")">Log In</a></li>
              }
            </ul>
          </nav>
          
          <div class="right-cta-menu text-right d-flex aligin-items-center col-6">
            <div class="ml-auto">
              @{ var roleClaim3 = (User != null && User.Identity != null) ? ((System.Security.Claims.ClaimsIdentity)User.Identity).FindFirst("VaiTro") : null; }
              @if (Request.IsAuthenticated && roleClaim3 != null && (roleClaim3.Value == "Company" || roleClaim3.Value == "Recruiter"))
              {
                <a href="@Url.Action("JobsCreate","Jobs")" class="btn btn-outline-white border-width-2 d-none d-lg-inline-block"><span class="mr-2 icon-add"></span>Post a Job</a>
              }
              @if (Request.IsAuthenticated)
              {
                <div class="dropdown d-none d-lg-inline-block">
                  @{ 
                    string avatarUrl = null; 
                    try {
                      var idClaim = (User != null && User.Identity != null) ? ((System.Security.Claims.ClaimsIdentity)User.Identity).FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier) : null;
                      if (idClaim != null) {
                        var accId = int.Parse(idClaim.Value);
                        using (var navdb = new Project_Recruiment_Huce.Models.JOBPROTAL_ENDataContext(System.Configuration.ConfigurationManager.ConnectionStrings["JOBPORTAL_ENConnectionString"].ConnectionString)) {
                          navdb.ObjectTrackingEnabled = false;
                          var acc = navdb.Accounts.FirstOrDefault(a => a.AccountId == accId);
                          if (acc != null && acc.PhotoId.HasValue) {
                            var photo = navdb.Photos.FirstOrDefault(p => p.PhotoId == acc.PhotoId.Value);
                            if (photo != null) { avatarUrl = Url.Content(photo.FilePath); }
                          }
                        }
                      }
                    } catch { }
                  }
                  <a href="#" class="btn btn-primary border-width-2 dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img src="@(avatarUrl ?? Url.Content("~/Content/images/person_1.jpg"))" alt="avatar" style="width:28px;height:28px;border-radius:50%;object-fit:cover;margin-right:8px;" /> @User.Identity.Name
                  </a>
                  <div class="dropdown-menu dropdown-menu-right">
                    @{ var navRoleClaim = ((System.Security.Claims.ClaimsIdentity)User.Identity).FindFirst("VaiTro"); }
                    @if (navRoleClaim != null && navRoleClaim.Value == "Candidate")
                    {
                      <a class="dropdown-item" href="@Url.Action("CandidatesManage", "Candidates")">Manage</a>
                    }
                    else if (navRoleClaim != null && navRoleClaim.Value == "Company")
                    {
                      <a class="dropdown-item" href="@Url.Action("CompaniesManage", "Companies")">Manage</a>
                    }
                    else if (navRoleClaim != null && navRoleClaim.Value == "Recruiter")
                    {
                      <a class="dropdown-item" href="@Url.Action("RecruitersManage", "Recruiters")">Manage</a>
                    }
                    else
                    {
                      <a class="dropdown-item" href="@Url.Action("Manage", "Account")">Manage</a>
                    }
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                      @Html.AntiForgeryToken()
                      <button type="submit" class="dropdown-item">Log Out</button>
                    }
                  </div>
                </div>
              }
              else
              {
                <a href="@Url.Action("Login", "Account")" class="btn btn-primary border-width-2 d-none d-lg-inline-block"><span class="mr-2 icon-lock_outline"></span>Log In</a>
              }
            </div>
            <a href="#" class="site-menu-toggle js-menu-toggle d-inline-block d-xl-none mt-lg-2 ml-3"><span class="icon-menu h3 m-0 p-0 mt-2"></span></a>
          </div>

        </div>
      </div>
