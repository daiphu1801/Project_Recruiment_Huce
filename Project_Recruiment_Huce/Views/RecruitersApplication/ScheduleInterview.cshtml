@model Project_Recruiment_Huce.Models.Recruiters.InterviewScheduleViewModel

@{
    ViewBag.Title = "Đặt lịch phỏng vấn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-hero overlay inner-page bg-image" style="background-image: url('@Url.Content("~/Content/images/hero_1.jpg")')" id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h1 class="text-white font-weight-bold d-flex align-items-center">
                    <i class="icon-calendar-check-o mr-3"></i>Đặt lịch phỏng vấn
                </h1>
                <div class="custom-breadcrumbs d-flex align-items-center">
                    <a href="@Url.Action("Index","Home")" class="breadcrumb-link">
                        <i class="icon-home mr-1"></i>Trang chủ
                    </a> <span class="mx-2 slash">/</span>
                    <a href="@Url.Action("MyApplications","RecruitersApplication")" class="breadcrumb-link">
                        <i class="icon-list mr-1"></i>Đơn ứng tuyển
                    </a> <span class="mx-2 slash">/</span>
                    <a href="@Url.Action("ApplicationDetails","RecruitersApplication", new { id = Model.ApplicationID })" class="breadcrumb-link">
                        <i class="icon-file-text mr-1"></i>Chi tiết
                    </a> <span class="mx-2 slash">/</span>
                    <span class="text-white"><strong><i class="icon-calendar mr-1"></i>Đặt lịch phỏng vấn</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="site-section">
    <div class="container">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="icon-exclamation-circle mr-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <!-- Info Card Full Width -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body p-3 bg-light">
                <div class="row">
                    <div class="col-md-6 mb-2 mb-md-0">
                        <div class="d-flex align-items-center">
                            <i class="icon-user-circle text-primary mr-2" style="font-size: 1.5rem;"></i>
                            <div>
                                <small class="text-muted d-block">Ứng viên</small>
                                <strong>@Model.CandidateName</strong>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <i class="icon-briefcase text-success mr-2" style="font-size: 1.5rem;"></i>
                            <div>
                                <small class="text-muted d-block">Vị trí ứng tuyển</small>
                                <strong>@Model.JobTitle</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Left Column -->
            <div class="col-lg-6">
                <!-- Main Form Card -->
                <div class="card border-0 shadow-lg">
                    <div class="card-header text-white border-0" style="background: linear-gradient(135deg, #89ba16 0%, #6d9413 100%);">
                        <h4 class="mb-0 d-flex align-items-center">
                            <i class="icon-edit mr-3"></i>Thông tin lịch phỏng vấn
                        </h4>
                    </div>
                    <div class="card-body p-4">
                        @using (Html.BeginForm("ScheduleInterview", "RecruitersApplication", FormMethod.Post, new { @class = "interview-form", id = "interview-form-id" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.ApplicationID)
                            @Html.HiddenFor(m => m.CandidateName)
                            @Html.HiddenFor(m => m.CandidateEmail)
                            @Html.HiddenFor(m => m.JobTitle)

                            <div class="form-section mb-4">
                                <h5 class="section-title mb-3">
                                    <i class="icon-calendar text-primary mr-2"></i>Thời gian phỏng vấn
                                </h5>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.InterviewDate, new { @class = "form-label font-weight-bold" })
                                            <span class="text-danger">*</span>
                                            @Html.TextBoxFor(m => m.InterviewDate, new { 
                                                @class = "form-control form-control-lg", 
                                                type = "date",
                                                min = DateTime.Now.ToString("yyyy-MM-dd")
                                            })
                                            @Html.ValidationMessageFor(m => m.InterviewDate, "", new { @class = "text-danger small" })
                                            <small class="form-text text-muted">
                                                <i class="icon-info-circle mr-1"></i>Chọn ngày phỏng vấn
                                            </small>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.InterviewTime, new { @class = "form-label font-weight-bold" })
                                            <span class="text-danger">*</span>
                                            @Html.TextBoxFor(m => m.InterviewTime, new { 
                                                @class = "form-control form-control-lg", 
                                                type = "time"
                                            })
                                            @Html.ValidationMessageFor(m => m.InterviewTime, "", new { @class = "text-danger small" })
                                            <small class="form-text text-muted">
                                                <i class="icon-clock-o mr-1"></i>Chọn giờ bắt đầu phỏng vấn
                                            </small>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Duration, new { @class = "form-label font-weight-bold" })
                                            @Html.TextBoxFor(m => m.Duration, new { 
                                                @class = "form-control form-control-lg", 
                                                type = "number",
                                                min = "15",
                                                max = "480",
                                                step = "15",
                                                placeholder = "Nhập thời gian (phút)"
                                            })
                                            @Html.ValidationMessageFor(m => m.Duration, "", new { @class = "text-danger small" })
                                            <small class="form-text text-muted">
                                                <i class="icon-hourglass mr-1"></i>Thời gian dự kiến từ 15 phút đến 8 giờ (480 phút)
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-section mb-4">
                                <h5 class="section-title mb-3">
                                    <i class="icon-map-marker text-success mr-2"></i>Địa điểm & Hình thức
                                </h5>
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.InterviewType, new { @class = "form-label font-weight-bold" })
                                            <span class="text-danger">*</span>
                                            @Html.DropDownListFor(m => m.InterviewType, ViewBag.InterviewTypes as SelectList, "-- Chọn hình thức phỏng vấn --", new { @class = "form-control form-control-lg" })
                                            @Html.ValidationMessageFor(m => m.InterviewType, "", new { @class = "text-danger small" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Location, new { @class = "form-label font-weight-bold" })
                                            <span class="text-danger">*</span>
                                            @Html.TextAreaFor(m => m.Location, new { 
                                                @class = "form-control form-control-lg", 
                                                rows = "2",
                                                placeholder = "Ví dụ: Phòng họp A, Tầng 5, Tòa nhà XYZ, 123 Đường ABC, Quận 1, TP.HCM"
                                            })
                                            @Html.ValidationMessageFor(m => m.Location, "", new { @class = "text-danger small" })
                                            <small class="form-text text-muted">
                                                <i class="icon-info-circle mr-1"></i>Nhập địa chỉ cụ thể hoặc link phỏng vấn online
                                            </small>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Interviewer, new { @class = "form-label font-weight-bold" })
                                            @Html.TextBoxFor(m => m.Interviewer, new { 
                                                @class = "form-control form-control-lg", 
                                                placeholder = "Ví dụ: Mr. Nguyễn Văn A - Trưởng phòng Nhân sự"
                                            })
                                            @Html.ValidationMessageFor(m => m.Interviewer, "", new { @class = "text-danger small" })
                                            <small class="form-text text-muted">
                                                <i class="icon-user mr-1"></i>Tên và chức vụ người phỏng vấn
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-lg-6">
                <div class="card border-0 shadow-lg">
                    <div class="card-header text-white border-0" style="background: linear-gradient(135deg, #89ba16 0%, #6d9413 100%);">
                        <h5 class="mb-0 d-flex align-items-center">
                            <i class="icon-file-text mr-2"></i>Yêu cầu & Lưu ý
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        @using (Html.BeginForm())
                        {
                            <div class="form-section mb-4">
                                <div class="form-group mb-3">
                                    @Html.LabelFor(m => m.RequiredDocuments, new { @class = "form-label font-weight-bold" })
                                    @Html.TextAreaFor(m => m.RequiredDocuments, new { 
                                        @class = "form-control form-control-lg", 
                                        rows = "6",
                                        placeholder = "Ví dụ:\n- Bản gốc CMND/CCCD\n- Bản sao bằng cấp và chứng chỉ\n- CV và các tài liệu liên quan\n- Portfolio (nếu có)",
                                        form = "interview-form-id"
                                    })
                                    @Html.ValidationMessageFor(m => m.RequiredDocuments, "", new { @class = "text-danger small" })
                                    <small class="form-text text-muted">
                                        <i class="icon-info-circle mr-1"></i>Danh sách tài liệu ứng viên cần mang theo
                                    </small>
                                </div>

                                <div class="form-group mb-3">
                                    @Html.LabelFor(m => m.AdditionalNotes, new { @class = "form-label font-weight-bold" })
                                    @Html.TextAreaFor(m => m.AdditionalNotes, new { 
                                        @class = "form-control form-control-lg", 
                                        rows = "6",
                                        placeholder = "Ví dụ:\n- Vui lòng đến trước 10 phút để hoàn tất thủ tục đăng ký\n- Mặc trang phục lịch sự, chuyên nghiệp\n- Liên hệ số hotline 0123456789 nếu cần hỗ trợ",
                                        form = "interview-form-id"
                                    })
                                    @Html.ValidationMessageFor(m => m.AdditionalNotes, "", new { @class = "text-danger small" })
                                    <small class="form-text text-muted">
                                        <i class="icon-info-circle mr-1"></i>Các lưu ý hoặc hướng dẫn thêm cho ứng viên
                                    </small>
                                </div>
                            </div>

                            <!-- Info Alert -->
                            <div class="alert alert-info d-flex align-items-start" role="alert">
                                <i class="icon-info-circle mr-2 mt-1" style="font-size: 1.2rem;"></i>
                                <div>
                                    <strong>Lưu ý:</strong> Sau khi bấm "Gửi lịch hẹn", hệ thống sẽ tự động gửi email thông báo đến 
                                    <strong>@Model.CandidateEmail</strong>
                                </div>
                            </div>

                            <div class="form-actions mt-3">
                                <button type="submit" class="btn btn-primary btn-lg btn-block mb-2" form="interview-form-id">
                                    <i class="icon-paper-plane mr-2"></i>Gửi lịch hẹn
                                </button>
                                <a href="@Url.Action("ApplicationDetails", "RecruitersApplication", new { id = Model.ApplicationID })" class="btn btn-outline-secondary btn-lg btn-block">
                                    <i class="icon-arrow-left mr-2"></i>Quay lại
                                </a>
                            </div>
                        }
                    </div>
                </div>

                <!-- Help Card -->
                <div class="card border-0 shadow-sm mt-4">
                    <div class="card-body p-3">
                        <h6 class="font-weight-bold mb-2">
                            <i class="icon-question-circle text-info mr-2"></i>Hướng dẫn sử dụng
                        </h6>
                        <ul class="mb-0 small text-muted">
                            <li class="mb-1">Điền đầy đủ thông tin vào các trường bắt buộc (*)</li>
                            <li class="mb-1">Chọn thời gian phù hợp, tránh trùng lịch</li>
                            <li class="mb-1">Cung cấp địa điểm cụ thể hoặc link meeting</li>
                            <li class="mb-1">Liệt kê rõ các tài liệu cần chuẩn bị</li>
                            <li>Email sẽ được gửi tự động sau khi xác nhận</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function() {
            // Auto-resize textareas
            $('textarea').on('input', function() {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
            });

            // Form validation feedback
            $('.interview-form').on('submit', function(e) {
                if (!this.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                    $(this).addClass('was-validated');
                    
                    // Scroll to first error
                    var firstError = $('.text-danger:visible').first();
                    if (firstError.length) {
                        $('html, body').animate({
                            scrollTop: firstError.offset().top - 100
                        }, 500);
                    }
                    return false;
                }
                
                // Show loading state
                $(this).find('button[type="submit"]').prop('disabled', true)
                    .html('<i class="icon-spinner icon-spin mr-2"></i>Đang gửi...');
            });

            // Interview type change handler
            $('#InterviewType').on('change', function() {
                var type = $(this).val();
                var locationField = $('#Location');
                
                if (type === 'Trực tuyến') {
                    locationField.attr('placeholder', 'Ví dụ: Link Zoom: https://zoom.us/j/123456789 hoặc Google Meet: https://meet.google.com/xxx-xxxx-xxx');
                } else if (type === 'Điện thoại') {
                    locationField.attr('placeholder', 'Ví dụ: Số điện thoại liên hệ: 0123456789');
                } else {
                    locationField.attr('placeholder', 'Ví dụ: Phòng họp A, Tầng 5, Tòa nhà XYZ, 123 Đường ABC, Quận 1, TP.HCM');
                }
            });

            // Set default time if empty
            if ($('#InterviewTime').val() === '') {
                $('#InterviewTime').val('09:00');
            }
        });
    </script>
}

@section Styles {
    <link href="@Url.Content("~/Content/css/schedule-interview.css")" rel="stylesheet" type="text/css" />
}
