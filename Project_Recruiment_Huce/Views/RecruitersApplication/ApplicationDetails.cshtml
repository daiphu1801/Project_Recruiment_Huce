@model Project_Recruiment_Huce.Models.Recruiters.RecruiterApplicationViewModel

@{
    ViewBag.Title = "Chi tiết đơn ứng tuyển";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-hero overlay inner-page bg-image" style="background-image: url('@Url.Content("~/Content/images/hero_1.jpg")');" id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold">Chi tiết đơn ứng tuyển</h1>
                <div class="custom-breadcrumbs">
                    <a href="@Url.Action("Index","Home")">Trang chủ</a> <span class="mx-2 slash">/</span>
                    <a href="@Url.Action("MyApplications","RecruitersApplication")">Đơn ứng tuyển</a> <span class="mx-2 slash">/</span>
                    <span class="text-white"><strong>Chi tiết</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="site-section">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="row">
            <div class="col-lg-8">
                <!-- Candidate Information -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0"><i class="icon-user mr-2"></i>Thông tin ứng viên</h4>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@Model.CandidateName</h5>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                @if (!string.IsNullOrEmpty(Model.CandidateEmail))
                                {
                                    <p><strong><i class="icon-envelope mr-2"></i>Email:</strong> @Model.CandidateEmail</p>
                                }
                                @if (!string.IsNullOrEmpty(Model.CandidatePhone))
                                {
                                    <p><strong><i class="icon-phone mr-2"></i>Điện thoại:</strong> @Model.CandidatePhone</p>
                                }
                            </div>
                            <div class="col-md-6">
                                <p><strong><i class="icon-calendar mr-2"></i>Ngày ứng tuyển:</strong> 
                                    @Model.AppliedAt.ToString("dd/MM/yyyy HH:mm")
                                </p>
                                <p><strong><i class="icon-clock-o mr-2"></i>Cập nhật lúc:</strong> 
                                    @Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Job Information -->
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h4 class="mb-0"><i class="icon-briefcase mr-2"></i>Thông tin công việc</h4>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="@Url.Action("Details", "JobDetails", new { id = Model.JobPostID })" class="text-primary">
                                @Model.JobTitle
                            </a>
                        </h5>
                        <p><strong>Công ty:</strong> @Model.CompanyName</p>
                        @if (!string.IsNullOrEmpty(Model.JobCode))
                        {
                            <p><strong>Mã công việc:</strong> @Model.JobCode</p>
                        }
                    </div>
                </div>

                <!-- Application Status -->
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0"><i class="icon-check-circle mr-2"></i>Trạng thái đơn ứng tuyển</h4>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <span class="badge @Model.StatusBadgeClass badge-lg">@Model.StatusDisplay</span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Note))
                        {
                            <div class="mt-3">
                                <strong>Ghi chú:</strong>
                                <div class="alert alert-light mt-2">@Model.Note</div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Documents -->
                <div class="card mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h4 class="mb-0"><i class="icon-file-text mr-2"></i>Tài liệu đính kèm</h4>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.ResumeFilePath))
                        {
                            <p>
                                <strong><i class="icon-file-pdf mr-2"></i>CV:</strong>
                                <a href="@Url.Content(Model.ResumeFilePath)" target="_blank" class="btn btn-sm btn-outline-primary ml-2">
                                    <i class="icon-download mr-1"></i>Tải xuống CV
                                </a>
                            </p>
                        }
                        else
                        {
                            <p class="text-muted">Chưa có CV đính kèm</p>
                        }

                        @if (!string.IsNullOrEmpty(Model.CertificateFilePath))
                        {
                            <p>
                                <strong><i class="icon-certificate mr-2"></i>Chứng chỉ:</strong>
                                <a href="@Url.Content(Model.CertificateFilePath)" target="_blank" class="btn btn-sm btn-outline-primary ml-2">
                                    <i class="icon-download mr-1"></i>Tải xuống chứng chỉ
                                </a>
                            </p>
                        }
                    </div>
                </div>
            </div>

            <!-- Sidebar Actions -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="icon-cog mr-2"></i>Thao tác</h5>
                    </div>
                    <div class="card-body">
                        <a href="@Url.Action("UpdateApplicationStatus", "RecruitersApplication", new { id = Model.ApplicationID })" class="btn btn-success btn-block mb-3">
                            <i class="icon-edit mr-2"></i>Cập nhật trạng thái
                        </a>
                        <a href="@Url.Action("Details", "JobDetails", new { id = Model.JobPostID })" class="btn btn-outline-primary btn-block mb-3">
                            <i class="icon-briefcase mr-2"></i>Xem công việc
                        </a>
                        <a href="@Url.Action("MyApplications", "RecruitersApplication")" class="btn btn-outline-secondary btn-block">
                            <i class="icon-arrow-left mr-2"></i>Quay lại danh sách
                        </a>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="icon-info mr-2"></i>Thông tin</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Mã đơn:</strong> #@Model.ApplicationID</p>
                        <p><strong>Ứng viên:</strong> @Model.CandidateName</p>
                        <p><strong>Công việc:</strong> @Model.JobTitle</p>
                        <p><strong>Trạng thái:</strong> 
                            <span class="badge @Model.StatusBadgeClass">@Model.StatusDisplay</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

