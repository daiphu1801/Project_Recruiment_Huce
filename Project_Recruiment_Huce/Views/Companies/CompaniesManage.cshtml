@model Project_Recruiment_Huce.Models.Company
@{
  ViewBag.Title = "Company Profile";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
  <link rel="stylesheet" href="~/Content/css/quill.snow.css" />
  <style>
    #company-desc-editor .ql-editor { min-height: 360px; height: 360px; }
  </style>
}

@section Scripts {
  <script src="~/Scripts/js/quill.min.js"></script>
  <script>
    (function () {
      var editor = new Quill('#company-desc-editor', { theme: 'snow' });
      var hidden = document.getElementById('Description');
      if (hidden && hidden.value) { editor.root.innerHTML = hidden.value; }
      var form = document.getElementById('company-form');
      if (form) { form.addEventListener('submit', function(){ hidden.value = editor.root.innerHTML; }); }
    })();
  </script>
}

<section class="section-hero overlay inner-page bg-image" style="background-image: url('@Url.Content("~/Content/images/hero_1.jpg")');" id="home-section">
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <h1 class="text-white font-weight-bold">Company Profile</h1>
        <div class="custom-breadcrumbs">
          <a href="@Url.Action("Index","Home")">Home</a> <span class="mx-2 slash">/</span>
          <span class="text-white"><strong>Company</strong></span>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="site-section">
  <div class="container">
    <div class="row mb-5">
      <div class="col-lg-12">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "p-4 p-md-5 border rounded", id = "company-form" }))
        {
          <h3 class="text-black mb-5 border-bottom pb-2">Company Details</h3>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="CompanyName">Company Name</label>
              @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", placeholder = "Your company name" })
            </div>
            <div class="form-group col-md-3">
              <label for="TaxCode">Tax Code</label>
              @Html.TextBoxFor(m => m.TaxCode, new { @class = "form-control", placeholder = "MST" })
            </div>
            <div class="form-group col-md-3">
              <label for="Industry">Industry</label>
              @Html.TextBoxFor(m => m.Industry, new { @class = "form-control", placeholder = "Industry" })
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="Address">Address</label>
              @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Address" })
            </div>
            <div class="form-group col-md-3">
              <label for="Phone">Phone</label>
              @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Phone" })
            </div>
            <div class="form-group col-md-3">
              <label for="CompanyEmail">Company Email</label>
              @Html.TextBoxFor(m => m.CompanyEmail, new { @class = "form-control", type = "email", placeholder = "company@domain.com" })
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="Website">Website</label>
              @Html.TextBoxFor(m => m.Website, new { @class = "form-control", placeholder = "https://" })
            </div>
          </div>

          <h3 class="text-black my-5 border-bottom pb-2">Description</h3>
          <div class="form-group">
            <div id="company-desc-editor" class="editor"></div>
            @Html.HiddenFor(m => m.Description, new { id = "Description" })
          </div>

          <div class="text-right">
            <button type="submit" class="btn btn-primary btn-md">Save Company</button>
          </div>
        }
      </div>
    </div>
  </div>
</section>


