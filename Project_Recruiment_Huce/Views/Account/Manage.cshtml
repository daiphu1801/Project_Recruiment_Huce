@{
    ViewBag.Title = "Quản lý tài khoản";
}

<section class="section-hero overlay inner-page bg-image" style="background-image: url('@Url.Content("~/Content/images/hero_1.jpg")');" id="home-section">
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <h1 class="text-white font-weight-bold">Account Settings</h1>
        <div class="custom-breadcrumbs">
          <a href="@Url.Action("Index", "Home")">Home</a> <span class="mx-2 slash">/</span>
          <span class="text-white"><strong>Manage</strong></span>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="site-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <h2 class="mb-4">Xin chào, @User.Identity.Name</h2>
        <div class="p-4 border rounded">
          @{ var roleClaim = ((System.Security.Claims.ClaimsIdentity)User.Identity).FindFirst("VaiTro");
             var role = roleClaim != null ? roleClaim.Value : string.Empty; }

          @if (role == "Candidate")
          {
            <p>Bạn đang đăng nhập với vai trò <strong>Candidate</strong>.</p>
            <a href="@Url.Action("CandidatesManage","Candidates")" class="btn btn-primary">Chỉnh sửa hồ sơ ứng viên</a>
          }
          else if (role == "Company")
          {
            <p>Bạn đang đăng nhập với vai trò <strong>Company</strong>.</p>
            <a href="@Url.Action("JobsCreate","Jobs")" class="btn btn-outline-primary">Đăng tin tuyển dụng</a>
            <span class="text-muted d-block mt-2">Trang quản lý hồ sơ công ty sẽ được bổ sung.</span>
          }
          else if (role == "Recruiter")
          {
            <p>Bạn đang đăng nhập với vai trò <strong>Recruiter</strong>.</p>
            <a href="@Url.Action("JobsCreate","Jobs")" class="btn btn-outline-primary">Đăng tin tuyển dụng</a>
            <span class="text-muted d-block mt-2">Trang quản lý hồ sơ nhà tuyển dụng sẽ được bổ sung.</span>
          }
          else if (role == "Admin")
          {
            <p>Bạn đang đăng nhập với vai trò <strong>Admin</strong>.</p>
            <a href="@Url.Action("Index","Home", new { area = "Admin" })" class="btn btn-outline-primary">Vào trang Admin</a>
          }
          else
          {
            <p>Không xác định vai trò tài khoản.</p>
          }
        </div>
      </div>
    </div>
  </div>
</section>


