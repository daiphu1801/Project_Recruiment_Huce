@model Project_Recruiment_Huce.Models.Accounts.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký";
    var userType = Request.QueryString["userType"] ?? "candidate";
}

@section Styles {
    <link href="@Url.Content("~/Content/css/auth-split-screen.css")" rel="stylesheet" type="text/css" />
}

<!-- Hero Section -->
<section class="section-hero overlay inner-page bg-image" style="background-image: url('@Url.Content("~/Content/images/hero_1.jpg")');" id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold">Đăng ký</h1>
                <div class="custom-breadcrumbs">
                    <a href="@Url.Action("Index","Home")">Trang chủ</a> <span class="mx-2 slash">/</span>
                    <span class="text-white"><strong>Đăng ký</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="auth-split-container">
    @if (userType == "candidate")
    {
        <!-- Form Ứng Viên -->
        <div class="auth-panel auth-panel-single">
            <div class="auth-card scrollable">
                <div class="auth-header">
                    <div class="auth-icon">
                        <i class="icon-user"></i>
                    </div>
                    <h2 class="auth-title">Đăng Ký Ứng Viên</h2>
                    <p class="auth-subtitle">Tạo tài khoản để tìm kiếm công việc</p>
                </div>

                @using (Html.BeginForm("Register", "Account", new { userType = "candidate" }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="auth-form-group">
                        <label class="auth-label">Tên đăng nhập *</label>
                        @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "auth-input", placeholder = "Nhập tên đăng nhập" })
                        @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger" })
                    </div>

                    <div class="auth-form-group">
                        <label class="auth-label">Email *</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "auth-input", placeholder = "email@example.com" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="auth-form-group">
                        <label class="auth-label">Số điện thoại</label>
                        @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "auth-input", placeholder = "Số điện thoại (tùy chọn)" })
                        @Html.ValidationMessageFor(m => m.SoDienThoai, "", new { @class = "text-danger" })
                    </div>

                    @Html.HiddenFor(m => m.VaiTro, new { Value = "NguoiUngTuyen" })

                    <div class="auth-form-group">
                        <label class="auth-label">Mật khẩu *</label>
                        <div class="password-toggle">
                            @Html.PasswordFor(m => m.Password, new { @class = "auth-input", placeholder = "Tối thiểu 6 ký tự", id = "Password" })
                            <span class="password-toggle-icon icon-eye" onclick="togglePassword('Password', this)"></span>
                        </div>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="auth-form-group">
                        <label class="auth-label">Xác nhận mật khẩu *</label>
                        <div class="password-toggle">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "auth-input", placeholder = "Nhập lại mật khẩu", id = "ConfirmPassword" })
                            <span class="password-toggle-icon icon-eye" onclick="togglePassword('ConfirmPassword', this)"></span>
                        </div>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="auth-btn auth-btn-primary">
                        Đăng ký
                    </button>
                }

                <div class="auth-links">
                    <div>Đã có tài khoản? @Html.ActionLink("Đăng nhập", "Login", new { userType = "candidate" })</div>
                    <div style="margin-top: 8px;">Bạn là nhà tuyển dụng? @Html.ActionLink("Đăng ký ở đây", "Register", new { userType = "recruiter" })</div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Form Nhà Tuyển Dụng -->
        <div class="auth-panel auth-panel-single">
            <div class="auth-card scrollable">
                <div class="auth-header">
                    <div class="auth-icon">
                        <i class="icon-briefcase"></i>
                    </div>
                    <h2 class="auth-title">Đăng Ký NTD</h2>
                    <p class="auth-subtitle">Tạo tài khoản để tuyển dụng nhân tài</p>
                </div>

                @using (Html.BeginForm("Register", "Account", new { userType = "recruiter" }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="auth-form-group">
                        <label class="auth-label">Tên đăng nhập *</label>
                        @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "auth-input", placeholder = "Nhập tên đăng nhập" })
                        @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger" })
                    </div>

                    <div class="auth-form-group">
                        <label class="auth-label">Email *</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "auth-input", placeholder = "email@example.com" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="auth-form-group">
                        <label class="auth-label">Số điện thoại</label>
                        @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "auth-input", placeholder = "Số điện thoại (tùy chọn)" })
                        @Html.ValidationMessageFor(m => m.SoDienThoai, "", new { @class = "text-danger" })
                    </div>

                    @Html.HiddenFor(m => m.VaiTro, new { Value = "NhaTuyenDung" })

                    <div class="auth-form-group">
                        <label class="auth-label">Mật khẩu *</label>
                        <div class="password-toggle">
                            @Html.PasswordFor(m => m.Password, new { @class = "auth-input", placeholder = "Tối thiểu 6 ký tự", id = "Password" })
                            <span class="password-toggle-icon icon-eye" onclick="togglePassword('Password', this)"></span>
                        </div>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="auth-form-group">
                        <label class="auth-label">Xác nhận mật khẩu *</label>
                        <div class="password-toggle">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "auth-input", placeholder = "Nhập lại mật khẩu", id = "ConfirmPassword" })
                            <span class="password-toggle-icon icon-eye" onclick="togglePassword('ConfirmPassword', this)"></span>
                        </div>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="auth-btn auth-btn-primary">
                        Đăng ký
                    </button>
                }

                <div class="auth-links">
                    <div>Đã có tài khoản? @Html.ActionLink("Đăng nhập", "Login", new { userType = "recruiter" })</div>
                    <div style="margin-top: 8px;">Bạn là ứng viên? @Html.ActionLink("Đăng ký ở đây", "Register", new { userType = "candidate" })</div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function togglePassword(inputId, iconElement) {
            var input = document.getElementById(inputId);
            if (input.type === "password") {
                input.type = "text";
                iconElement.classList.remove("icon-eye");
                iconElement.classList.add("icon-eye-slash");
            } else {
                input.type = "password";
                iconElement.classList.remove("icon-eye-slash");
                iconElement.classList.add("icon-eye");
            }
        }
    </script>
}
